/* pages/birthday/index.wxss */

.list {
  width: 100%;
  height: 100%;
}

.list audio {
  display: inline;
}

.list > .row {
  width: calc(100% - 120rpx);
  height: 110rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #ededed;
}

.list > .row:last-child {
  border-bottom: 0;
}

.list > .row > .btn-launch-tv {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 5rpx;
}
