/* pages/waiter/index.wxss */
.user-info-panel {
  width: calc(100% - 100rpx);
  height: 200rpx;
  padding: 0 50rpx;
}

.user-info-panel>.head {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.user-info-panel>view {
  width: calc(100% - 170rpx);
  height: 140rpx;
  margin-left: 30rpx;
}

.user-info-panel>view>image {
  width: 40rpx;
  height: 49rpx;
}

.user-info-panel>view>view {
  width: calc(100% - 50rpx);
  height: 140rpx;
}

.user-info-panel>view>view>view:first-child {
  font-size: 34rpx;
  font-weight: 600;
}

.user-info-panel>view>view>view:last-child {
  margin-top: 30rpx;
  font-size: 28rpx;
}

.user-info-panel>view>view>view:last-child>view:first-child {
  width: 216rpx;
}

.user-info-panel>view>view>view:last-child>view:last-child {
  margin-left: 14rpx;
  font-weight: 600;
}

.evaluate-list-panel {
  width: 100%;
  margin-top: 10rpx;
}

.evaluate-list-panel>.title {
  width: calc(100% - 80rpx);
  height: 70rpx;
  margin: 0 40rpx;
}

.evaluate-list-panel>.title>view:first-child {
  width: 120rpx;
  height: 65rpx;
  line-height: 70rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-bottom: 5rpx solid #a18668;
}

.evaluate-list-panel>.title>view:last-child {
  width: 430rpx;
  font-size: 28rpx;
  /* color: #A0856A; */
}

.evaluate-list-panel>.title>view:last-child>view:first-child>picker {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #ededed;
}

.evaluate-list-panel>.title>view:last-child>view:last-child {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
}

.evaluate-list-panel>.body {
  width: 100%;
}

.evaluate-list-panel>.body>.tip {
  width: 100%;
  height: 44rpx;
  padding-top: 36rpx;
  font-size: 28rpx;
  text-align: center;
}

.evaluate-list-panel>.body>.list {
  width: 100%;
}

.evaluate-list-panel>.body>.list>.row {
  width: 100%;
  height: 300rpx;
  padding-left: 60rpx;
  padding-right: 50rpx;
  padding-top: 32rpx;
}

.evaluate-list-panel>.body>.list>.row>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.evaluate-list-panel>.body>.list>.row>view {
  width: calc(100% - 94rpx);
  margin-left: 14rpx;
}

.evaluate-list-panel>.body>.list>.row>view>.user-info {
  width: 100%;
  height: 80rpx;
}

.evaluate-list-panel>.body>.list>.row>view>.user-info>.nikename {
  width: 100%;
  font-size: 28rpx;
  margin-bottom: 14rpx;
}

.evaluate-list-panel>.body>.list>.row>view>.user-info>view:last-child {
  width: 160rpx;
  font-size: 24rpx;
}

.evaluate-list-panel>.body>.list>.row>view>.comment {
  width: 546rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.evaluate-list-panel>.body>.list>.row>view>.datetime {
  width: 100%;
  margin-top: 24rpx;
  font-size: 24rpx;
}

.evaluate-list-panel>.body>.list>.row>view>.address {
  width: 100%;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.evaluate-list-panel>.body>.list>.row.bottom-line {
  border-bottom: 1px solid #ededed;
}