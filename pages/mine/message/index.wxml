<!--pages/mine/message/index.wxml-->
<!--
 | 消息通知首页
 |-->


<scroll-view class='container theme-container' style='height: calc(100vh - {{46 + statusBarHeight}}px);' scroll-y="true" scroll-with-animation="true">
  <view class="wapper">
    <block wx:for="{{list}}" wx:for-item="bean" wx:key="key" wx:for-index="index">
      <view class="item flex_column_center_flexStart">
        <view class="top flex_row_center_spaceBetween">
          <view class="title theme-font1 one-line-overflow">{{bean.title}}</view>
          <view class="time theme-font3 one-line-overflow">{{bean.time}}</view>
        </view>
        <view class="main flex_row_center_spaceBetween">
          <view class="user flex_row_center_spaceBetween">
            <image class="hader" mode="aspectFill" src="{{bean.user_header}}"></image>
            <view class="name two-line-overflow">{{bean.user_name}}</view>
          </view>
          <view class="message theme-font1">{{bean.msg}}</view>
        </view>
      </view>
    </block>
  </view>
</scroll-view>