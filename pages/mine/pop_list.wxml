<view class="container theme-main">
  <view class='list full_width'>
    <block wx:for="{{pop_list}}" wx:key="key" wx:for-item="bean" wx:for-index="index">
    <view class='row line theme7'>
      <image class="goods-pic" src='http://oss.littlehotspot.com/WeChat/MiniProgram/LaunchScreen/source/images/imgs/default.jpeg'></image>
      <view class='goods'>
        <view class='title theme-font2'>{{bean.goods_name}}</view>
        <view class='infomation full_width'>
          <view class='price theme-font2'>￥{{bean.price}}</view>
          <view class='discount theme-font5'>返利{{bean.rebate_integral}}积分</view>
        </view>
      </view>
      <view class='operate'>
        <button wx:if="{{bean.is_add==0}}" class='btn-add theme-button-add'>添加</button>
        <button wx:else class="btn-added theme-button">已添加</button>
      </view>
    </view>
