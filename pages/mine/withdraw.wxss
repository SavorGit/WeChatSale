/* pages/mine/withdraw.wxss */

/* 积分提现 */

.integral-panel {
  width: 100%;
  height: 190rpx;
}

.integral-panel > .title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: 900;
}

.integral-panel > .integral {
  height: 65rpx;
  line-height: 65rpx;
  font-size: 60rpx;
  font-weight: 900;
}

.goods-panel {
  width: calc(100% - 40rpx);
  margin-top: 10rpx;
  padding: 0 20rpx 30rpx 20rpx;
}

.weui-grids, .weui-grids::before, .weui-grids::after, .weui-grid,
.weui-grid::before, .weui-grid::after {
  position: unset;
}

.goods-panel .weui-grid {
  height: 145rpx;
}

.goods-panel > .title-bar {
  height: 100rpx;
}

.goods-panel > .title-bar > .icon {
  color: #67c213;
}

.goods-panel > .title-bar > .title {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.goods-panel .flag-bar {
  width: 100%;
  height: 30rpx;
  margin-bottom: -20rpx;
  z-index: 2;
}

.goods-panel .flag-bar > .flag {
  width: 100rpx;
  height: 100%;
  line-height: 100%;
  font-size: 26rpx;
  text-align: center;
}

.goods-panel .goods {
  width: 220rpx;
  height: 120rpx;
  border: 2rpx solid #eb6877;
  border-radius: 10rpx;
  z-index: 1;
}

.goods-panel .goods > .face-value {
  height: 50rpx;
  padding-top: 10rpx;
  font-size: 36rpx;
}

.goods-panel .goods > .consume {
  height: 30rpx;
  font-size: 24rpx;
}

.desc-panel {
  width: calc(100% - 40rpx);
  padding: 50rpx 20rpx;
  font-size: 32rpx;
}

.desc-panel > .title {
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
}

.desc-panel > .content {
  font-size: 24rpx;
}

.desc-panel > .content > view {
  text-indent: 48rpx;
}
