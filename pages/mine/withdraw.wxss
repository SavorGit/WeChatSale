/* pages/mine/withdraw.wxss */

/* 积分提现 */

.integral-panel {
  width: 100%;
  height: 200rpx;
}

.integral-panel > .title {
  height: 50rpx;
  font-size: 24rpx;
}

.integral-panel > .integral {
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 900;
}

.goods-panel {
  width: calc(100% - 40rpx);
  margin-top: 20rpx;
  padding: 0 20rpx 30rpx 20rpx;
}

.weui-grids, .weui-grids::before, .weui-grids::after, .weui-grid,
.weui-grid::before, .weui-grid::after {
  position: unset;
}

.goods-panel .weui-grid {
  height: 180rpx;
}

.goods-panel > .title-bar {
  height: 60rpx;
}

.goods-panel > .title-bar > .icon {
  color: rgb(37, 155, 36);
}

.goods-panel > .title-bar > .title {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.goods-panel .flag-bar {
  width: 100%;
  height: 30rpx;
  margin-top: -10rpx;
  margin-bottom: -15rpx;
  z-index: 2;
}

.goods-panel .flag-bar > .flag {
  width: 100rpx;
  height: 100%;
  line-height: 100%;
  font-size: 26rpx;
  text-align: center;
}

.goods-panel .goods {
  width: 219rpx;
  height: 146rpx;
  border: 1rpx solid #eb6877;
  z-index: 1;
}

.goods-panel .goods > .face-value {
  height: 60rpx;
  padding-top: 20rpx;
  font-size: 32rpx;
}

.goods-panel .goods > .consume {
  height: 30rpx;
  font-size: 24rpx;
}

.desc-panel {
  width: calc(100% - 100rpx);
  padding: 20rpx 50rpx 50rpx 50rpx;
  font-size: 32rpx;
}

.desc-panel > .title {
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
}

.desc-panel > .content {
  font-size: 24rpx;
}
