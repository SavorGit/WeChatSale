/* pages/mine/select_waiter.wxss */
.list {
  width: 100%;
}

.row {
  width: calc(100% - 100rpx);
  height: 100rpx;
  padding: 0 50rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ededed;
}

.head-img {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  background-color: #58525c;
}

.waiter {
  width: 420rpx;
  padding: 0 20rpx;
}

.waiter>.name {
  width: 100%;
  font-size: 28rpx;
}

.waiter>.level {
  width: 100%;
  font-size: 24rpx;
}

.btn-update {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 5rpx;
}