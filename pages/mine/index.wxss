/* ================================= 修改昵称弹窗 ================================= */
.change-nikename-window {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.change-nikename-window>.title-bar {
  width: calc(100% - 60rpx);
  height: 100rpx;
  margin: 0 30rpx;
  font-size: 30rpx;
  font-weight: bolder;
  border-bottom: 1px solid #ededed;
}

.change-nikename-window>.body-panel {
  width: 100%;
  height: calc(100% - 100rpx - 2px);
}

.change-nikename-window>.body-panel>view:first-child {
  height: 200rpx;
}

.change-nikename-window>.body-panel>view:first-child>input {
  width: 300rpx;
  height: 50rpx;
  margin-top: 50rpx;
  border: 1px solid #999;
}

.change-nikename-window>.body-panel>.btn-submit {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
}