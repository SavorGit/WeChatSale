/* ================================ 销售面板 ================================ */
.sale-panel {
  width: 100%;
  height: 150rpx;
  margin-top: -75rpx;
}

.sale-panel>.wapper {
  width: calc(100% - 100rpx);
  height: 100%;
  margin: 0 50rpx;
  border-radius: 10rpx;
}

.sale-panel>.wapper>.shop {
  width: 160rpx;
  text-align: center;
}

.sale-panel>.wapper>.shop>.fa {
  font-size: 36rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.sale-panel>.wapper>.order {
  width: calc(100% - 165rpx);
  border-left: 5rpx solid rgba(255, 255, 255, 0.3);
}

.sale-panel>.wapper>.order>view {
  width: 160rpx;
  text-align: center;
}

.sale-panel>.wapper>.order>view>view:first-child {
  font-size: 34rpx;
}

/* ================================ 收益概况面板 ================================ */

.profit-profile-panel {
  margin-top: 10rpx;
  height: 380rpx;
}

.profit-profile-panel>.top {
  height: 70rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.profit-profile-panel>.top>.title {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}

.profit-profile-panel>.top>.title {
  font-size: 24rpx;
}

.profit-profile-panel>.info {
  height: 70rpx;
  padding-left: 30rpx;
  padding-right: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.profit-profile-panel>.info>label {
  width: calc(100% - 120rpx);
  font-size: 60rpx;
  /* font-weight: 900; */
  display: inline-block;
}

.profit-profile-panel>.info>.btn-exchange::after {
  border: unset;
}

.profit-profile-panel>.info>.btn-exchange {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 10rpx;
  padding: 0;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: 2rpx solid #ededed;
  background-color: #fff;
  text-align: center;
}

.profit-profile-panel>.month {
  height: calc(100% - 200rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.profit-profile-panel>.month>.block {
  width: 248rpx;
  height: 120rpx;
  margin: 0 15rpx;
  padding: 20rpx 30rpx;
  background-color: rgb(235, 104, 119);
  border-radius: 10rpx;
}

.profit-profile-panel>.month>.block>.title {
  height: 30rpx;
  font-size: 24rpx;
}

.profit-profile-panel>.month>.block>.integral {
  height: calc(100% - 30rpx);
  font-size: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.profit-profile-panel>.integral-tip {
  height: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* ================================ 活动商品管理面板 ================================ */

.promotion-goods-manage-panel {
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 2rpx solid #ededed;
}

.promotion-goods-manage-panel>navigator {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/* ================================ 用户信息面板 ================================ */

.team-members-panel {
  margin-top: 10rpx;
  height: 170rpx;
}

.team-members-panel>.title {
  padding: 20rpx 30rpx 0 30rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.team-members-panel>.list {
  height: calc(100% - 70rpx);
  padding: 0 30rpx 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: start;
}

.team-members-panel>.list>.cell {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.team-members-panel>.list>.cell>image {
  border-radius: 50%;
}

.team-members-panel>.list>.add {
  border: 1rpx dashed #bfbfbf;
  color: #999;
  border-radius: 50%;
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

