/* pages/menu/index.wxss */
@import "/utils/panel.wxss";

/**
 * 配菜 首页
 */
.btn {
    margin: 0;
    padding: 0;
    border: 0;
}

.link>.text {
    text-decoration: underline;
}

.panel.jardiniere>.pbody {
    padding: 100rpx 0;
}

.panel.jardiniere>.pbody>.btn.start {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.panel.dish>.title-bar>.link>.text {
    text-decoration: underline;
}

.panel.dish>.pbody>.list>.item {
    width: calc(100% - 60rpx);
    padding: 10rpx 30rpx;
}

.panel.dish>.pbody>.list>.item>.row {
    padding: 10rpx 0;
}

.panel.dish>.pbody>.list>.item>.row>.property>.label {
    width: 120rpx;
}

.panel.dish>.pbody>.list>.item>.row>.property>.value {
    width: calc(100% - 120rpx);
}