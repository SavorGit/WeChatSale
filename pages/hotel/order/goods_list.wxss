/* pages/hotel/order/goods_list.wxss */
/**
 * 商城订单列表页面
 */


.tab-bar {
  width: 100%;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.tab-bar>.tab {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
}

.tab-bar>.tab.selected {
  color: #333333;
  border-bottom: 5rpx solid #EB6877;
  background-color: unset;
}

.tab-body {
  width: 100%;
  height: calc(100% - 110rpx);
}

.list {
  width: 100%;
}

.item {
  width: calc(100% - 80rpx);
  height: 380rpx;
  margin: 20rpx 20rpx 0 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.item>.goods {
  width: 100%;
  height: 160rpx;
}

.item>.goods>.left {
  width: calc(100% - 120rpx);
}

.item>.goods>.left>.pic {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.item>.goods>.left>.name {
  width: calc(100% - 180rpx);
  font-size: 32rpx;
}

.item>.goods>.left>.fa {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 48rpx;
}

.item>.goods>.right {
  width: 120rpx;
  height: 100%;
}

.item>.goods>.right>.status {
  font-size: 28rpx;
}

.item>.goods>.right>.bottom {
  width: 100%;
}

.item>.goods>.right>.bottom>.price {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
}

.item>.goods>.right>.bottom>.count {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
}

.item>.consignee-info {
  width: calc(100% - 120rpx);
  height: 120rpx;
  padding: 20rpx 60rpx;
}

.item>.consignee-info>.top {
  width: 100%;
}

.item>.consignee-info>.top>.name {
  width: 150rpx;
  font-size: 28rpx;
}

.item>.consignee-info>.top>.phone {
  width: calc(100% - 150rpx);
  font-size: 28rpx;
}

.item>.consignee-info>.address {
  width: 100%;
  font-size: 28rpx;
}

.item>.bottom {
  width: 100%;
  height: 50rpx;
  padding-top: 10rpx;
  border-top: 3rpx solid #EDEDED;
}

.item>.bottom>.datetime {
  font-size: 24rpx;
}

.item>.bottom>.btn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
  border: 0;
}

.item:last-child {
  margin-bottom: 20rpx;
}