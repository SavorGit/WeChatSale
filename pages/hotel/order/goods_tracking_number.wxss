/* pages/hotel/order/goods_tracking_number.wxss */
/**
 * 商城订单发货页面
 */


.input-panel {
  width: 100%;
  height: 400rpx;
  padding: 70rpx 0 50rpx 0;
}

.input-panel>.btn {
  width: 300rpx;
}

.input-panel>.scan {
  height: 300rpx;
  border-radius: 50%;
}

.input-panel>.scan>.fa {
  font-size: 150rpx;
}

.input-panel>.scan>.tip {
  font-size: 28rpx;
}

.input-panel>.type {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  text-decoration: underline;
  font-size: 32rpx;
}

.search-page {
  width: 690rpx;
  height: calc(100% - 688rpx);
  margin-bottom: 60rpx;
  border-radius: 10rpx;
}

.search-page>.title-bar,
.search-page>.body {
  width: calc(100% - 60rpx);
  padding: 20rpx 30rpx;
}

.search-page>.title-bar {
  height: 50rpx;
  border-bottom: 3rpx solid #EDEDED;
}

.search-page>.title-bar>.title {
  font-size: 32rpx;
}

.search-page>.body {
  height: calc(100% - 115rpx);
}

.search-page>.body .list {
  padding: 0 30rpx;
}

.search-page>.body .list>.item {
  width: 100%;
  padding: 10rpx;
}

.search-page>.body .list>.item>.left {
  width: 30rpx;
}

.search-page>.body .list>.item>.right {
  width: calc(100% - 70rpx);
}

.search-page>.body .list>.item>.right>.name {
  font-size: 32rpx;
  font-weight: bold;
}

.search-page>.body .list>.item>.right>.id {
  font-size: 28rpx;
}

.bottom {
  width: 100%;
  height: 88rpx;
}

.bottom>.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0;
  margin: 0;
  padding: 0;
  border: 0;
}
/* ================================= 修改昵称弹窗 ================================= */
.change-nikename-window {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.change-nikename-window>.title-bar {
  width: calc(100% - 60rpx);
  height: 100rpx;
  margin: 0 30rpx;
  font-size: 30rpx;
  font-weight: bolder;
  border-bottom: 1px solid #ededed;
}

.change-nikename-window>.body-panel {
  width: 100%;
  height: calc(100% - 100rpx - 2px);
}

.change-nikename-window>.body-panel>view:first-child {
  height: 200rpx;
}

.change-nikename-window>.body-panel>view:first-child>input {
  width: 300rpx;
  height: 50rpx;
  margin-top: 50rpx;
  border: 1px solid #999;
}

.change-nikename-window>.body-panel>.btn-submit {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
}