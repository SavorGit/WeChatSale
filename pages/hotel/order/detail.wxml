<!--pages/hotel/order/detail.wxml-->
<scroll-view class='container theme-container' style='height: calc(100vh - 46px - {{statusBarHeight}}px);' scroll-y="true" scroll-with-animation="true">
	<view class="page-wapper">
		<!-- 食客自提 -->
		<block wx:if="{{order_info.delivery_type==2 && order_info.type==1}}">
			<view class="status-panel input-panel theme-panel" wx:if="{{order_info.status==10 || order_info.status==13 || order_info.status==17 || order_info.status==18 || order_info.status==19}}">
				<view class="head flex_row_center_spaceBetween">
					<view class="status">{{order_info.status_str}}></view>
				</view>
			</view>
			<!-- 自取地址信息(此板块不受状态影响) -->
			<view class="input-panel theme-panel">
				<view class="head">自取地址</view>
				<view class="body flex_column_center_spaceBetween">
					<view class="row flex_row_center_spaceBetween">
						<!-- 注意：行首空格不能删除 -->
						<view class="view fa fa-map-marker" style="width:100%;" aria-hidden="true"> {{order_info.address}}</view>
					</view>
					<view class="row flex_row_center_spaceBetween">
						<view class="lable theme-font3">预留手机</view>
						<view class="view">{{order_info.phone}}</view>
					</view>
				</view>
			</view>
		</block>
		<!-- 外卖配送 -->
		<block wx:elif="{{order_info.delivery_type==1 && order_info.type==1}}">
			<!-- 派送中 -->
			<view class="status-panel input-panel theme-panel" wx:if="{{order_info.status==15 || order_info.status==16}}">
				<view class="head flex_row_center_spaceBetween">
					<view class="status">{{order_info.status_str}}></view>
					<view class="distance flex_row_center_spaceBetween" wx:if="{{order_info.status==15}}">
						<view class="content one-line-overflow">骑手距餐厅还有{{order_info.distance}}</view>
						<view class="btn fa fa-refresh theme-font theme-bg-FFFFFF" bindtap="reFreshOrder"></view>
					</view>
					<view class="distance flex_row_center_spaceBetween" wx:if="{{order_info.status==16}}">
						<view class="content one-line-overflow">骑手距买家还有{{order_info.distance}}</view>
						<view class="btn fa fa-refresh theme-font theme-bg-FFFFFF" bindtap="reFreshOrder"></view>
					</view>
				</view>
				<view class="body">
					<map id="map" longitude="{{order_info.user_location.lng}}" latitude="{{order_info.user_location.lat}}" scale="14" markers="{{markers}}" bindmarkertap="markertap" polyline="{{order_info.polyline}}" bindregionchange="regionchange" show-location></map>
					<button class="btn theme-button-welcome" bindtap='phonecallevent' data-tel="{{order_info.transporter.phone}}">
						<view class="fa fa-phone" aria-hidden="true"> 联系骑手</view>
					</button>
				</view>
			</view>
		</block>
		<view class="goods-info input-panel theme-panel">
			<view class="head">菜品信息</view>
			<view class="body flex_column_center_spaceBetween">
				<view class="hotel theme-font7">由{{order_info.merchant.name}}提供</view>
				<view class="row flex_row_center_spaceBetween" wx:for="{{order_info.goods}}" wx:key="key" wx:for-item="bean" wx:for-index="index">
					<image class="pic" mode="aspectFill" src="{{bean.img}}"></image>
					<view class="center">
						<view class="name two-line-overflow">{{bean.goods_name}}</view>
						<view class="price theme-font5">￥{{bean.price}}</view>
					</view>
					<view class="right flex_row_center_flexEnd">
						<view class="count one-line-overflow">X{{bean.amount}}</view>
					</view>
				</view>

			</view>
			<view class="foot flex_row_center_spaceBetween">
				<view class="theme-font2">合计：{{order_info.amount}}件菜品</view>
				<view class="theme-font5">￥{{order_info.total_fee}}</view>
			</view>
		</view>
		<view class="input-panel theme-panel">
			<view class="head">配送信息</view>
			<!-- 食客自提 -->
			<view class="body flex_column_center_spaceBetween" wx:if="{{order_info.delivery_type==2}}">
				<view class="row flex_row_center_spaceBetween">
					<view class="view">到店自提,自提时间：{{order_info.selfpick_time}}</view>
				</view>
			</view>
			<!-- 外卖配送 -->
			<view class="body flex_column_center_spaceBetween" wx:else>
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">联系人</view>
					<view class="view">{{order_info.contact}}</view>
				</view>
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">联系电话</view>
					<view class="view">{{order_info.phone}}</view>
				</view>
				<view class="row flex_row_flexStart_spaceBetween">
					<view class="lable theme-font3">配送地址</view>
					<view class="view two-line-overflow">{{order_info.address}}</view>
				</view>
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">配送时间</view>
					<view class="view">{{order_info.delivery_time}}</view>
				</view>
				<view class="row flex_row_center_spaceBetween" wx:if="{{order_info.type==1}}">
					<view class="lable theme-font3">配送费用</view>
					<view class="view">{{order_info.delivery_fee}}</view>
				</view>
			</view>
		</view>
		<view class="input-panel theme-panel">
			<view class="head">订单信息</view>
			<view class="body flex_column_center_spaceBetween">
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">订单编号</view>
					<view class="view">{{order_info.order_id}}</view>
				</view>
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">下单时间</view>
					<view class="view">{{order_info.add_time}}</view>
				</view>
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">完成时间</view>
					<view class="view">{{order_info.finish_time}}</view>
				</view>
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">订单金额</view>
					<view class="view">{{order_info.total_fee}}</view>
				</view>
			</view>
		</view>
		<view class="input-panel theme-panel" wx:if="{{order_info.type==1}}">
			<view class="head">发票信息</view>
			<view class="body flex_column_center_spaceBetween">
				<!-- 企业 -->
				<block wx:if="{{order_info.invoice.title_type==1}}">
					<view class="row flex_row_center_spaceBetween">
						<view class="lable theme-font3">企业名称</view>
						<view class="view">{{order_info.invoice.company}}</view>
					</view>
					<view class="row flex_row_center_spaceBetween">
						<view class="lable theme-font3">企业税号</view>
						<view class="view">{{order_info.invoice.credit_code}}</view>
					</view>
				</block>
				<block wx:elif="{{order_info.invoice.title_type==2}}">
					<!-- 个人 -->
					<view class="row flex_row_center_spaceBetween">
						<view class="lable theme-font3">个人姓名</view>
						<view class="view">{{order_info.invoice.company}}</view>
					</view>
				</block>
			</view>
		</view>
		<view class="input-panel theme-panel" wx:if="{{order_info.type==1}}">
			<view class="head">餐具</view>
			<view class="body flex_column_center_spaceBetween">
				<!--
				<view class="row flex_row_center_spaceBetween">
					<view class="lable theme-font3">数量</view>
					<view class="view">2</view>
				</view>
				-->
				<view class="row flex_row_center_spaceBetween" wx:if="{{order_info.tableware>0}}">
					<view class="view">{{order_info.tableware}}份</view>
				</view>
			</view>
		</view>
		<view class="input-panel theme-panel" wx:if="{{order_info.type==1}}">
			<view class="head">订单备注</view>
			<view class="body flex_column_center_spaceBetween">
				<view class="row flex_row_center_spaceBetween" style="height:unset;">
					<view class="view" style="width:100%;">{{order_info.remark}}</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>