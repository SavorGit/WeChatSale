.row>.body>.center.multiple-goods {
  width: 90rpx;
}

.row>.body>.center.multiple-goods>view:first-child {
  font-size: 42rpx;
}

.row>.body>.right {
  width: 155rpx;
  height: 100%;
}

.row>.body>.right>.price {
  font-size: 36rpx;
}

.row>.body>.right>.count {
  font-size: 24rpx;
}

.row>.important {
  width: calc(100% - 120rpx);
  height: 150rpx;
  padding: 0 40rpx 0 80rpx;
}

.row>.important>view {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
}

.row>.important button {
  color: inherit;
  font-size: inherit;
  background: inherit;
  margin: 0;
  padding: 0;
  border: 0;
}

.row>.foot {
  width: calc(100% - 40rpx);
  height: 65rpx;
  padding-right: 0;
  border-top: 3rpx dashed #ededed;
}

.row>.foot>.order-number {
  white-space: nowrap;
}

.row>.foot>.btn {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.row.bottom-space {
  margin-bottom: 10rpx;
}