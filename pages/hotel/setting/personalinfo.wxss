/* pages/hotel/setting/personalinfo.wxss */
/**
 * 个人基本信息页面
 */


button,
button:active,
button:focus {
  background-color: unset;
}

.page {
  width: 100vw;
  height: 100vh;
}

.main {
  width: 100%;
  height: calc(100% - 120rpx);
}

.main .scroll-view-warpper {
  width: 100%;
}

.main .scroll-view-warpper>.panel {
  width: calc(100% - 10rpx);
  padding: 8rpx 5rpx;
}

.main .scroll-view-warpper>.panel>.title-bar {
  width: calc(100% - 40rpx);
  padding: 10rpx 20rpx;
}

.main .scroll-view-warpper>.panel>.title-bar>.title {
  font-size: 32rpx;
  font-weight: bold;
}

.main .scroll-view-warpper>.panel>.p-body {
  width: calc(100% - 40rpx);
  padding: 0 0rpx 10rpx;
}

.main .scroll-view-warpper>.panel>.p-body .down-line {
  border-bottom-width: 3rpx;
  border-bottom-style: solid;
  border-bottom-color: rgba(187, 187, 187, 0.5);
}

.main .scroll-view-warpper>.panel>.p-body>.row {
  width: 100%;
  padding: 10rpx 30rpx;
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property {
  width: 100%;
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property>.label {
  width: 150rpx;
  font-size: 32rpx;
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value {
  width: calc(100% - 150rpx);
  padding: 0;
  margin: 0;
  border: 0;
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.frame {
  width: calc(100% - 6rpx);
  height: calc(100% - 6rpx);
  border: 3rpx solid rgb(187, 187, 187);
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.input,
.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.frame>.input {
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  padding: 5rpx;
  font-size: 28rpx;
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.pic {
  width: 200rpx;
  height: 200rpx;
}


.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.btn,
.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.frame>.btn {
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  padding: 5rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 0;
  margin: 0;
}

.main .scroll-view-warpper>.panel>.p-body>.row>.property>.value>.btn.grant-mobile {
  width: 200rpx;
  height: 60rpx;
  color: #FFFFFF;
  background: rgb(164, 173, 179);
}

.foot {
  width: 100%;
  height: 100rpx;
  padding: 10rpx 0;
}

.foot>.button-group {
  width: calc(100% - 20rpx);
  height: calc(100% - 20rpx);
  padding: 10rpx;
}

.foot>.button-group>.btn {
  border-radius: 8rpx;
  border: 0;
  padding: 0;
  margin: 0;
}

.foot>.button-group>.btn.save {
  width: 548rpx;
  height: 80rpx;
  font-size: 24rpx;
}