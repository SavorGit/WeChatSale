/* pages/hotel/dishmenu/index.wxss */
/**
 * 菜品管理
 */


.mask {
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.page {
  width: 100vw;
  height: 100vh;
}

.page.list .list {
  width: 100%;
  padding: 30rpx 0;
}

.page.list .list>.item {
  width: calc(100% - 40rpx);
  padding: 10rpx 20rpx;
  margin-top: 5rpx;
}

.page.list .list>.item:first-child {
  margin-top: 0;
}

.page.list .list>.item>.left {
  width: 250rpx;
}

.page.list .list>.item>.left>.pic {
  width: 222rpx;
  height: 148rpx;
}

.page.list .list>.item>.rigth {
  width: calc(100% - 250rpx);
}

.page.list .list>.item>.rigth>.top {
  width: 100%;
}

.page.list .list>.item>.rigth>.top>.name {
  width: calc(100% - 180rpx);
  font-size: 40rpx;
  font-weight: 400;
}

.page.list .list>.item>.rigth>.top>.btn {
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 0;
  margin: 0;
  padding: 0;
}

.page.list .list>.item>.rigth>.top>.btn.edit {
  width: 160rpx;
  height: 60rpx;
}

.page.list .list>.item>.rigth>.synopsis {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
}

.window.edit .window {
  width: 690rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.window.edit .window>.option-bar {
  width: 100%;
  height: 60rpx;
}

.window.edit .window>.option-bar>.btn {
  width: 50rpx;
  height: 50rpx;
}

.window.edit .window>.option-bar>.btn>.icon {
  width: 100%;
  height: 100%;
}

.window.edit .window>.title-bar {
  width: calc(100% - 40rpx);
  padding: 0 20rpx 10rpx;
}

.window.edit .window>.title-bar>.title {
  font-size: 28rpx;
  font-weight: bold;
}

.window.edit .window>.window-body {
  width: 100%;
}

.window.edit .window>.window-body>.row {
  width: calc(100% - 50rpx);
  padding: 10rpx 25rpx;
}

.window.edit .window>.window-body>.row .btn {
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 0;
  margin: 0;
  padding: 0;
}

.window.edit .window>.window-body>.row>.label {
  width: 80rpx;
  font-size: 28rpx;
}

.window.edit .window>.window-body>.row>.value {
  width: calc(100% - 86rpx);
  border: 3rpx solid #DEDEDE;
  font-size: 28rpx;
}

.window.edit .window>.window-body>.row>.value>.input {
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  padding: 5rpx;
}

.window.edit .window>.window-body>.row.pic {
  height: 368rpx;
}

.window.edit .window>.window-body>.row.pic>.pic {
  width: 556rpx;
  height: 368rpx;
}

.window.edit .window>.window-body>.row.pic>.btn {
  width: 160rpx;
  height: 60rpx;
  margin-top: -214rpx;
  margin-bottom: 184rpx;
}

.window.edit .window>.window-body>.row.text>.value {
  height: 54rpx;
}

.window.edit .window>.window-body>.row.textarea>.value {
  height: 124rpx;
}

.window.edit .window>.window-body>.row.textarea>.value>.input {
  line-height: 30rpx;
}

.window.edit .window>.window-body>.row.btn-group {
  height: 100rpx;
}

.window.edit .window>.window-body>.row.btn-group>.btn.save {
  width: 280rpx;
  height: 84rpx;
}