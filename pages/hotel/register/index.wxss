/* pages/hotel/register/index.wxss */
.wapper {
  width: 100%;
}

.shop {
  width: 100%;
  height: 330rpx;
}

.shop>.info {
  width: calc(100% - 40rpx);
  height: calc(100% - 90rpx);
  padding: 0 20rpx;
}

.shop>.info>.pic-wapper {
  width: 200rpx;
  height: 200rpx;
}

.shop>.info>.pic-wapper>.pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.shop>.info>.pic-wapper>.flag {
  width: 60rpx;
  height: 60rpx;
  margin-top: -200rpx;
  /* margin-top: -220rpx;
  margin-left: -10rpx; */
  display: flex;
}

.shop>.info>.right {
  width: calc(100% - 250rpx);
  height: 200rpx;
}

.shop>.info>.right>.name {
  font-size: 32rpx;
  font-weight: bold;
}

.shop>.info>.right>view {
  width: 100%;
  font-size: 28rpx;
}

.shop>.info>.right>view:nth-child(2)>view {
  min-width: 120rpx;
}

.shop>.btn-group {
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #ededed;
}

.shop>.btn-group>.btn {
  width: 50%;
  height: 80%;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
  color: inherit;
  background: unset;
}

.shop>.btn-group>.btn:last-child {
  border-left: 1px solid #ededed;
}

.shop>.btn-group>.btn>.fa {
  margin-right: 20rpx;
}

.goods-list {
  width: calc(100% - 30rpx);
  padding: 25rpx 30rpx;
}

.scroll-view .list {
  width: 100vw;
}

.scroll-view .list>.row {
  width: calc(100% - 80rpx);
  height: 180rpx;
  padding: 40rpx 35rpx 30rpx 45rpx;
  border-bottom: 1px solid #ededed;
}

.scroll-view .list>.row>.pic {
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
  background-color: rgba(161, 134, 104, 0.09);
}

.scroll-view .list>.row>.info {
  width: 445rpx;
  height: 180rpx;
}

.scroll-view .list>.row>.info>view {
  width: 100%;
  height: calc(100% - 95rpx);
  font-size: 32rpx;
}

.scroll-view .list>.row>.info>.price {
  height: 40rpx;
}

.scroll-view .list>.row>.info>.btn-group {
  width: 340rpx;
  height: 45rpx;
  padding-left: calc(100% - 340rpx);
}

.scroll-view .list>.row>.info>.btn-group>.btn {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 5rpx;
  margin: 0;
  padding: 0;
}

.scroll-view .list>.row>.info>.btn-group>.btn.on-line {
  color: #a18668;
  border: 1px solid #a18668;
}

.scroll-view .list>.row>.info>.btn-group>.btn.off-line {
  color: #eb6877;
  border: 1px solid #eb6877;
}

.scroll-view {
  width: 100%;
  height: calc(100% - 100rpx);
}

.page-bottom {
  width: 100%;
  height: 100rpx;
}

.page-bottom>.btn {
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

/* ============================= 分享菜品 ============================= */
.share-window {
  width: 100vw;
  height: 1040rpx;
}

.share-window>.title-bar {
  width: calc(100% - 80rpx);
  height: 120rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.share-window>.title-bar>.fa-close {
  font-size: 50rpx;
}

.share-window>.body {
  width: 100%;
  height: calc(100% - 220rpx);
}

.share-window>.body>.share-canvas {
  width: 250px;
  height: 370px;
  margin: 0;
  padding: 0;
  border: 0;
}

.share-window>.foot {
  width: 100%;
  height: 100rpx;
}

.share-window>.foot>.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0;
  padding: 0;
  border: 0;
}