  width: 160rpx;
}

.goods-info>.row:nth-child(5)>.wapper {
  height: 100%;
}

.goods-info>.row:nth-child(5)>.wapper>.row {
  width: 100%;
  height: 140rpx;
}

.goods-info>.row:nth-child(5)>.wapper>.row>.cell {
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid #bebebe;
  font-size: 37rpx;
}

.goods-info>.row:nth-child(5)>.wapper>.row>.cell>image {
  width: 100%;
  height: 100%;
}

.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 0;
  margin: 0;
  padding: 0;
