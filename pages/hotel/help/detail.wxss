/**
 * 酒楼帮助详情页面
 */


.page {
  width: 100%;
  height: 100%;
}

.title-bar {
  width: calc(100% - 60rpx);
  height: 118rpx;
  margin: 0 30rpx;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
}

.title-bar>.title {
  font-size: 40rpx;
  font-weight: 400;
}

.list {
  width: 100%;
}

.list>.item {
  width: 100%;
  height: 400rpx;
  padding: 25rpx 0;
}

.list>.item>.video {
  width: 588rpx;
  height: 334rpx;
}

.list>.item>.name {
  font-size: 28rpx;
  font-weight: 400;
}