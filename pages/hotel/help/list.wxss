/**
 * 酒楼帮助列表页面
 */


.list {
  width: calc(100% - 60rpx);
  padding: 30rpx 25rpx;
}

.item {
  width: calc(100% - 40rpx);
  height: 88rpx;
  padding: 5rpx 20rpx;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
}

.row {
  width: 100%;
  height: calc(100% - 10rpx);
  padding: 5rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: 400;
}

.row>.fa {
  font-size: 40rpx;
  font-weight: 400;
}