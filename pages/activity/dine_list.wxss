/* pages/activity/dine_list.wxss */
/**
 * 餐厅活动列表
 */


.scroll-view {
  width: 100%;
  height: calc(100% - 100rpx);
}

.list {
  width: 100%;
}

.list>.item {
  width: calc(100% - 60rpx);
  margin: 0 20rpx;
  padding: 10rpx;
  border-bottom: 2rpx solid #DBDBDB;
}

.list>.item>.row {
  width: 100%;
  height: 100rpx;
}

.list>.item>.row>.name {
  width: 40%;
  font-size: 40rpx;
  font-weight: 400;
}

.list>.item>.row>.status {
  width: 100rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.list>.item>.row>.option {
  width: calc(60% - 100rpx);
}

.list>.item>.row>.option>.btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  margin: 0;
  padding: 0;
  border: 0;
}

.page-foot {
  width: 100%;
  height: 100rpx;
}

.page-foot>.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
}