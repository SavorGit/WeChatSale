/**
 * 新增餐厅活动
 */


.page {
  width: 100vw;
  height: 100vh;
}

.scroll-view {
  width: 100%;
  height: calc(100% - 100rpx);
}

.wrapper {
  width: 100%;
  padding-top: 50rpx;
}

.wrapper>.row {
  width: calc(100% - 60rpx);
  padding: 10rpx 30rpx;
}

.wrapper>.row>.label {
  width: 160rpx;
  font-weight: 400;
  font-size: 28rpx;
  font-style: normal;
  letter-spacing: 0px;
  text-decoration: none;
}

.wrapper>.row>.value {
  width: calc(100% - 160rpx);
  margin: 0;
  padding: 0;
}

.wrapper>.row.text {
  height: 60rpx;
}

.wrapper>.row.text>.value {
  font-weight: 400;
  font-size: 28rpx;
  font-style: normal;
  letter-spacing: 0px;
  text-decoration: none;
}

.wrapper>.row.text>.value>.input {
  width: calc(100% - 24rpx);
  height: 56rpx;
  line-height: 56rpx;
  margin: 0;
  padding: 0 10rpx;
  font-size: inherit;
  font-weight: inherit;
  font-style: inherit;
  color: inherit;
  border: 2rpx solid #BBBBBB;
  border-radius: inherit;
  outline: none;
  background: inherit;
  text-align: inherit;
  resize: none;
}

.wrapper>.row.picker {
  height: 100rpx;
}

.wrapper>.row.picker>.label {
  margin-top: 5rpx;
}

.wrapper>.row.picker>.value {
  height: 100%;
  font-weight: 400;
  font-size: 28rpx;
  font-style: normal;
  letter-spacing: 0px;
  text-decoration: none;
}

.wrapper>.row.picker>.value>.picker {
  width: 100%;
  height: 60rpx;
}

.wrapper>.row.picker>.value>.picker>.input {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  border: 0;
  font-size: inherit;
  font-weight: inherit;
  font-style: inherit;
  color: inherit;
  border-radius: inherit;
  outline: none;
  background: inherit;
  text-align: inherit;
  resize: none;
}

.wrapper>.row.picker>.value>.picker>.input .wrapper {
  height: 100%;
  padding: 0;
}

.wrapper>.row.picker>.value>.picker>.input .wrapper>.show {
  width: calc(100% - 100rpx);
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 10rpx;
  border: 2rpx solid #BBBBBB;
  font-size: inherit;
  font-weight: inherit;
  font-style: inherit;
  color: inherit;
  border-radius: inherit;
  outline: none;
  background: inherit;
  text-align: inherit;
  resize: none;
}

.wrapper>.row.picker>.value>.picker .icon {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 60rpx;
}

.wrapper>.row.picker>.value>.tip {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  font-style: normal;
  letter-spacing: 0px;
  text-decoration: none;
}

.wrapper>.row.pic {
  height: 300rpx;
  padding: 30rpx;
}

.wrapper>.row.pic>.label {
  margin-top: 5rpx;
}

.wrapper>.row.pic>.value {
  height: 100%;
}

.wrapper>.row.pic>.value>.input {
  width: 100%;
  height: 100%;
}

.wrapper>.row.pic>.value>.input>.btn {
  border: 2rpx solid #BBBBBB;
}

.wrapper>.row.pic>.value>.input>.btn.add {
  width: 390rpx;
  height: 260rpx;
  line-height: 254rpx;
  text-align: center;
  font-size: 84rpx;
}

.wrapper>.row.pic>.value>.input>.show {
  width: 390rpx;
  height: 260rpx;
  border: 2rpx solid #BBBBBB;
}

.wrapper>.row.pic>.value>.input>.show>.del-pic {
  width: 100%;
  height: 50rpx;
  margin-top: -25rpx;
  margin-bottom: -27rpx;
  margin-right: -25rpx;
  margin-left: 25rpx;
}

.wrapper>.row.pic>.value>.input>.show>.del-pic>.btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 50rpx;
  z-index: 15;
}

.wrapper>.row.pic>.value>.input>.show>.pic {
  width: 386rpx;
  height: 256rpx;
}

.wrapper>.row.pic>.value>.tip {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  font-style: normal;
  letter-spacing: 0px;
  text-decoration: none;
}

.foot {
  width: 100%;
  height: 100rpx;
}

.foot>.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  margin: 0;
  padding: 0;
  border: 0;
  border-radius: 0;
}