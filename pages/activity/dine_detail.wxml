<!--pages/activity/dine_detail.wxml-->
<!--
  - 餐厅活动详情
  -->


<view class='container flex_column_center_flexStart theme-container'>
	<scroll-view class="scroll-view" scroll-y="true" scroll-with-animation="true">
		<view class="page">
			<view class="head flex_row_center_center">
				<view class="title theme-font3">活动已结束</view>
			</view>
			<view class="body flex_column_center_flexStart theme-page">
				<view class="row flex_row_center_flexStart text">
					<view class="label theme-font3">活动名称</view>
					<view class="value one-line-overflow">XXXXXXXX活动</view>
				</view>
				<view class="row flex_row_center_flexStart text">
					<view class="label theme-font3">奖品名称</view>
					<view class="value one-line-overflow">老北京烤鸭1份</view>
				</view>
				<view class="row flex_row_flexStart_flexStart pic">
					<view class="label theme-font3">奖品图片</view>
					<view class="value">
						<image class="pic" mode="aspectFill" src="http://oss.littlehotspot.com/WeChat/resource/default.jpg"></image>
					</view>
				</view>
				<view class="row flex_row_center_flexStart text">
					<view class="label theme-font3">开奖时间</view>
					<view class="value one-line-overflow">2020.9.10-19:00</view>
				</view>
				<view class="row flex_row_flexStart_flexStart we-chart">
					<view class="label theme-font3">中奖用户</view>
					<view class="value">
						<view class="user">
							<image class="head-img" mode="aspectFill" src="http://oss.littlehotspot.com/WeChat/resource/default.jpg"></image>
							<view class="nickname one-line-overflow">张三</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</scroll-view>
</view>