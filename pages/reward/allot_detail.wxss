/* pages/reward/allot_detail.wxss */

/**
 * 为员工收益明细页面
 */

.top-bar {
  width: calc(100% - 60rpx);
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
}

.top-bar>.type {
  margin-right: 80rpx;
}

.top-bar>.date {
  margin-right: 90rpx;
}

.scroll {
  width: 100%;
  height: calc(100% - 70rpx);
  margin-top: 10rpx;
}

.scroll .row {
  width: calc(100% - 60rpx);
  height: 120rpx;
  padding: 0 30rpx;
}

.scroll .row.line {
  border-bottom: 1rpx solid #ededed;
}

.scroll .row>.left {
  width: 120rpx;
  height: 100%;
}

.scroll .row>.left>.head {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.scroll .row>.center {
  width: calc(100% - 288rpx);
  height: calc(100% - 30rpx);
}

.scroll .row>.center>.name {
  width: 100%;
  font-size: 28rpx;
}

.scroll .row>.center>.date-time {
  width: 100%;
  font-size: 24rpx;
}

.scroll .row>.right {
  width: 168rpx;
}

.scroll .row>.right>.profit {
  width: 100%;
  font-size: 38rpx;
  font-weight: 700;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}