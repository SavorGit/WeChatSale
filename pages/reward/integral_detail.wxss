/* pages/mine/integral_list.wxss */

.top-bar {
  width: calc(100% - 60rpx);
  height: 60rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 24rpx;
}

.top-bar > .type {
  margin-right: 80rpx;
}

.top-bar > .date {
  margin-right: 90rpx;
}

.scroll {
  width: 100%;
  height: calc(100% - 70rpx);
  margin-top: 10rpx;
}

.scroll .row {
  width: calc(100% - 60rpx);
  height: 120rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.scroll .row.line {
  border-bottom: 1rpx solid #ededed;
}

.scroll .row > .detail {
  width: calc(100% - 168rpx);
  height: calc(100% - 30rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
}

.scroll .row > .detail > .info {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 28rpx;
}

.scroll .row > .detail > .info > .room {
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scroll .row > .detail > .info > .cause {
  width: calc(100% - 200rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scroll .row > .detail > .dateTime {
  width: 100%;
  height: 30rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scroll .row > .integral {
  width: 168rpx;
  font-size: 48rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
