.set_top_box-panel>.title {
  width: calc(100% - 100rpx);
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  font-size: 24rpx;
}

.set_top_box-panel>.title>view:first-child {
  font-size: 32rpx;
  font-weight: 900;
}

.set_top_box-panel>.scroll-view {
  width: 100%;
  /* height: calc(100% - 100rpx); */
  padding-bottom: 100rpx;
}

.set_top_box-panel>.scroll-view .weui-grids {
  width: 630rpx;
  padding: 20rpx 60rpx 40rpx 60rpx;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid {
  width: 138rpx;
  height: 138rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
  border-radius: 5rpx;
  background-color: #f6f4f2;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid:nth-child(4n + 1) {
  margin-left: 5rpx;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid:nth-child(1),
.set_top_box-panel>.scroll-view .weui-grids>.weui-grid:nth-child(2),
.set_top_box-panel>.scroll-view .weui-grids>.weui-grid:nth-child(3),
.set_top_box-panel>.scroll-view .weui-grids>.weui-grid:nth-child(4) {
  margin-top: 0;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid>.box {
  width: 100%;
  height: 100%;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid>.box>.light {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid>.box>.light>image,
.set_top_box-panel>.scroll-view .weui-grids>.weui-grid>.box>.light>view {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid>.box>.light.green-light {
  background-color: #aeaaad;
  font-size: 28rpx;
}

.set_top_box-panel>.scroll-view .weui-grids>.weui-grid>.box>.name {
  line-height: 24rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
  word-break: break-all;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.control-window {
  width: 630rpx;
  height: 400rpx;
  border-radius: 5rpx;
}

.control-window>.head {
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #ededed;
}

.control-window>.head>view {
  width: calc(100% - 120rpx);
  font-size: 30rpx;
  text-align: center;
}

.control-window>.head>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.control-window>.body {
  width: 100%;
  height: 308rpx;
}

.control-window>.body>.volume-group,
.control-window>.body>.btn-exit {
  width: 370rpx;
  height: 60rpx;
  margin-top: 75rpx;
}

.control-window>.body>.volume-group>view {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 5rpx;
}

.control-window>.body>.btn-exit {
  line-height: 60rpx;
  margin-top: 63rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 5rpx;
}


.message-window {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.message-window>.head {
  width: 100%;
  height: 100rpx;
}

.message-window>.head>.title-bar {
  width: calc(100% - 50rpx);
  height: calc(100% - 20rpx);
  padding: 10rpx 25rpx;
}

.message-window>.head>.title-bar>.text {
  font-size: 40rpx;
  font-weight: 700;
}

.message-window>.head>.option-bar {
  width: calc(100% - 50rpx);
  height: calc(100% - 20rpx);
  padding: 10rpx 25rpx;
  margin-top: -100rpx;
}

.message-window>.head>.option-bar>.btn {
  width: 60rpx;
  height: 60rpx;
}

.message-window>.body {
  width: 100%;
  height: calc(100% - 100rpx);
}

.message-window>.body>.content-group {
  width: calc(100% - 70rpx);
  height: calc(100% - 180rpx);
  padding: 10rpx 35rpx;
}

.message-window>.body>.content-group .text {
  text-align: center;
  font-size: 28rpx;
}

.message-window>.body>.btn-group {
  width: 100%;
  height: 160rpx;
}

.message-window>.body>.btn-group>.btn {
  width: 374rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 36rpx;
  margin: 0;
  padding: 0;
  border: 0;
}


.window {
  width: 100%;
  height: 100%;
}

.window>.title-bar {
  width: calc(100% - 40rpx);
  height: 70rpx;
  padding: 10rpx 20rpx;
}

.window>.title-bar>.title {
  min-width: 3rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.window>.option-bar {
  width: calc(100% - 20rpx);
  height: 70rpx;
  padding: 10rpx;
  margin-top: -90rpx;
}

.window>.option-bar>.btn {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 60rpx;
  padding: 10rpx;
  margin: 0;
  border: 0;
}

.window>.body {
  width: 100%;
  height: calc(100% - 120rpx);
}

.window>.status-bar {
  width: 100%;
  height: 10rpx;
}

.window.surprise>.body>.page {
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  padding: 5rpx;
}

.window.surprise>.body>.page>.top {
  width: 100%;
  height: 150rpx;
}

.window.surprise>.body>.page>.top>.icon {
  width: 136rpx;
  height: 136rpx;
}

.window.surprise>.body>.page>.middle {
  width: 100%;
  height: calc(100% - 270rpx);
}

.window.surprise>.body>.page>.middle>.row {
  width: 100%;
}

.window.surprise>.body>.page>.middle>.row>.tip {
  font-size: 40rpx;
  font-weight: 400;
}

.window.surprise>.body>.page>.middle>.row>.money {
  font-size: 72rpx;
  font-weight: 700;
}

.window.surprise>.body>.page>.middle>.row>.adorn {
  width: 60rpx;
  min-height: 3rpx;
  font-size: 28rpx;
  font-weight: 400;
  padding-left: 10rpx;
  padding-bottom: 14rpx;
}

.window.surprise>.body>.page>.bottom {
  width: 100%;
  height: 120rpx;
}

.window.surprise>.body>.page>.bottom>.btn {
  width: 398rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 10rpx;
  box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 6px 0px;
  margin: 0;
  padding: 0;
  border: 0;
}