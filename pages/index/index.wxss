/**index.wxss**/
@import "/animation.wxss";

page {
  margin: 0;
  padding: 0;
  border: 0;
}

.container {
  justify-content: start;
}

.link-type-panel {
  width: calc(100% - 49rpx);
  height: 100rpx;
  margin: 0;
  border: 0;
  padding: 0 25rpx;
}

.link-type-panel>.hotel,
.link-type-panel>.box {
  width: 50%;
}

.link-type-panel>.hotel>image,
.link-type-panel>.box image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.link-type-panel>.hotel>.choosed-hotel,
.link-type-panel>.box .choosed-box {
  width: calc(100% - 60rpx);
  font-size: 28rpx;
}

.launch-option-panel {
  width: 100%;
  height: 180rpx;
  margin-top: 10rpx;
}

.launch-option-panel>view {
  width: 90rpx;
  height: 130rpx;
  line-height: unset;
  text-align: center;
  margin: 0;
  border: 0;
  padding: 0;
  background-color: unset;
}

.launch-option-panel>view>.icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.launch-option-panel>view>.title {
  width: 90rpx;
  height: 90rpx;
  font-size: 24rpx;
}

.broadcast-panel {
  width: 100%;
  height: 60rpx;
  margin-top: 10rpx;
}

.broadcast-panel>.icon {
  width: 40rpx;
  height: 30rpx;
  margin: 0 35rpx;
}

.broadcast-panel>.broadcast-list {
  width: calc(100% - 110rpx);
  height: 36rpx;
}

.broadcast-panel>.broadcast-list swiper-item {
  font-size: 24rpx;
}

.prominent-function-panel {
  width: 680rpx;
  height: 200rpx;
  padding: 33rpx 35rpx;
  margin-top: 10rpx;
}

.prominent-function-panel>.botton {
  width: 330rpx;
  height: 200rpx;
  margin-left: 20rpx;
  padding-left: 35rpx;
  border-radius: 5rpx;
  background-size: 332rpx 200rpx;
}

.prominent-function-panel>.botton>.title {
  font-size: 32rpx;
  font-weight: bold;
}

.prominent-function-panel>.botton>.desc {
  font-size: 22rpx;
}

.prominent-function-panel>.botton.btn-welcome_speech {
  background-image: url('http://oss.littlehotspot.com/WeChat/WeChatSale/pages/index/welcome_speech.png');
}

.prominent-function-panel>.botton.btn-birthday_song {
  background-image: url('http://oss.littlehotspot.com/WeChat/WeChatSale/pages/index/birthday_song.png');
}

.prominent-function-panel>.botton:first-child {
  margin-left: 0;
}

.prominent-function-panel-2 {
  width: 680rpx;
  height: 300rpx;
  padding: 30rpx 35rpx;
  margin-top: 10rpx;
}

.prominent-function-panel-2 .botton {
  width: 295rpx;
  height: 140rpx;
  padding-left: 35rpx;
  border-radius: 5rpx;
  background-size: 330rpx 140rpx;
}

.prominent-function-panel-2 .botton>.title {
  font-size: 32rpx;
  font-weight: bold;
}

.prominent-function-panel-2 .botton>.desc {
  font-size: 22rpx;
}

.prominent-function-panel-2>.left,
.prominent-function-panel-2>.right {
  width: 330rpx;
  height: 300rpx;
}

.prominent-function-panel-2>.right {
  margin-left: 20rpx;
}

.prominent-function-panel-2>.left>.botton.btn-welcome_speech {
  height: 300rpx;
  background-size: 330rpx 300rpx;
  background-image: url('http://oss.littlehotspot.com/WeChat/WeChatSale/pages/index/welcome_speech-2.png');
}

.prominent-function-panel-2>.right>.botton.btn-birthday_song {
  background-image: url('http://oss.littlehotspot.com/WeChat/WeChatSale/pages/index/birthday_song-2.png');
}

.prominent-function-panel-2>.right>.botton.btn-restaurant_trailer {
  margin-top: 20rpx;
  background-image: url('http://oss.littlehotspot.com/WeChat/WeChatSale/pages/index/restaurant_trailer.png');
}

.collect-panel {
  width: 100%;
  height: 86px;
}

.set_top_box-panel {
  width: 100%;
  /* height: calc(100% - 646rpx); */
  margin-top: 10rpx;
