/**index.wxss**/
@import "/animation.wxss";

page {
  margin: 0;
  padding: 0;
  border: 0;
}

.container {
  justify-content: start;
}

.link-type-panel {
  width: calc(100% - 50rpx);
  height: 80rpx;
  margin: 0;
  border: 0;
  padding: 0 25rpx;
}

.link-type-panel > .hotel, .link-type-panel > .box {
  width: 50%;
}

.link-type-panel > .hotel > image, .link-type-panel > .box image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.link-type-panel > .hotel > .choosed-hotel, .link-type-panel > .box .choosed-box {
  width: calc(100% - 60rpx);
  font-size: 28rpx;
}

.launch-option-panel {
  width: 100%;
  height: 160rpx;
  margin-top: 10rpx;
}

.launch-option-panel > view {
  width: 90rpx;
  height: 130rpx;
  line-height: unset;
  text-align: center;
  margin: 0;
  border: 0;
  padding: 0;
  background-color: unset;
}

.launch-option-panel > view > .icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.launch-option-panel > view > .title {
  width: 90rpx;
  height: 90rpx;
  font-size: 24rpx;
}

.broadcast-panel {
  width: 100%;
  height: 60rpx;
  margin-top: 10rpx;
}

.broadcast-panel > .icon {
  width: 40rpx;
  height: 30rpx;
  margin: 0 35rpx;
}

.broadcast-panel > .broadcast-list {
  width: calc(100% - 110rpx);
  height: 36rpx;
}

.broadcast-panel > .broadcast-list swiper-item {
  font-size: 24rpx;
}

.prominent-function-panel {
  width: 680rpx;
  height: 266rpx;
  padding: 33rpx 35rpx;
  margin-top: 10rpx;
}

.prominent-function-panel > .botton {
  width: 330rpx;
  height: 200rpx;
  margin-left: 20rpx;
  padding-left: 35rpx;
  border-radius: 5rpx;
  background-size: 332rpx 200rpx;
}

.prominent-function-panel > .botton.btn-welcome_speech {
  background-image: url('http://redian-produce.oss-cn-beijing.aliyuncs.com/WeChat/WeChatSale/pages/index/welcome_speech.png');
}

.prominent-function-panel > .botton.btn-birthday_song {
  background-image: url('http://redian-produce.oss-cn-beijing.aliyuncs.com/WeChat/WeChatSale/pages/index/birthday_song.png');
}

.prominent-function-panel > .botton:first-child {
  margin-left: 0;
}

.prominent-function-panel > .botton > .title {
  font-size: 32rpx;
  font-weight: bold;
}

.prominent-function-panel > .botton > .desc {
  font-size: 22rpx;
}

.set_top_box-panel {
  width: 100%;
  height: calc(100% - 606rpx);
  margin-top: 10rpx;
}

.set_top_box-panel > .title {
  width: 100%;
  height: 100rpx;
  line-height: 2.8;
  font-size: 24rpx;
  text-align: center;
  background-image: url('http://redian-produce.oss-cn-beijing.aliyuncs.com/WeChat/WeChatSale/pages/index/set_top_box_list-title-bg.png');
  background-size: 100% 100rpx;
}

.set_top_box-panel > .scroll-view {
  width: 100%;
  height: calc(100% - 100rpx);
}

.set_top_box-panel > .scroll-view .weui-grids {
  width: 630rpx;
  padding: 20rpx 60rpx 40rpx 60rpx;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid {
  width: 138rpx;
  height: 138rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
  border-radius: 5rpx;
  background-color: #f6f4f2;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid:nth-child(4n + 1) {
  margin-left: 5rpx;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid:nth-child(1),
.set_top_box-panel > .scroll-view .weui-grids > .weui-grid:nth-child(2),
.set_top_box-panel > .scroll-view .weui-grids > .weui-grid:nth-child(3),
.set_top_box-panel > .scroll-view .weui-grids > .weui-grid:nth-child(4) {
  margin-top: 0;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid > .box {
  width: 100%;
  height: 100%;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid > .box > .light {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid > .box > .light > image,
.set_top_box-panel > .scroll-view .weui-grids > .weui-grid > .box > .light > view {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid > .box > .light.green-light {
  background-color: #aeaaad;
  font-size: 28rpx;
}

.set_top_box-panel > .scroll-view .weui-grids > .weui-grid > .box > .name {
  line-height: 24rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
  word-break: break-all;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.control-window {
  width: 630rpx;
  height: 400rpx;
  border-radius: 5rpx;
}

.control-window > .head {
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #ededed;
}

.control-window > .head > view {
  width: calc(100% - 120rpx);
  font-size: 30rpx;
  text-align: center;
}

.control-window > .head > image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.control-window > .body {
  width: 100%;
  height: 308rpx;
}

.control-window > .body > .volume-group, .control-window > .body > .btn-exit {
  width: 370rpx;
  height: 60rpx;
  margin-top: 75rpx;
}

.control-window > .body > .volume-group > view {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 5rpx;
}

.control-window > .body > .btn-exit {
  line-height: 60rpx;
  margin-top: 63rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 5rpx;
}

