/******************************/

.container {
  justify-content: start;
}

.hotel-choose-panel {
  width: 100%;
  height: 50rpx;
}

.hotel-choose-panel > .choosed-hotel {
  height: 50rpx;
  font-size: 28rpx;
  text-align: center;
}

.box-link {
  height: 128rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}

.box-link > .full_width {
  text-align: center;
}

.box-link > .full_width > .info {
  min-width: 50rpx;
  max-width: calc(100% - 90rpx);
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.box-link > .full_width > .btn-choose {
  width: 60rpx;
  margin-left: 30rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: left;
}

.box-link image {
  width: 40rpx;
  height: 40rpx;
  margin: 8rpx;
  padding: 10rpx;
  border-radius: 50%;
  background-color: #666;
}

.main-function-panel {
  margin-top: 10rpx;
}

.main-function-panel > button::after {
  border: 1rpx 0;
  border-radius: unset;
  background-color: unset;
}

.main-function-panel > button {
  height: 120rpx;
  border: unset;
  line-height: unset;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  margin: 0;
  padding: 0 120rpx;
  box-sizing: border-box;
  font-size: unset;
  text-align: unset;
  text-decoration: unset;
  border-radius: 0rpx;
  -webkit-tap-highlight-color: unset;
  overflow: hidden;
  background-color: unset;
}

.main-function-panel > button > .icon {
  width: 80rpx;
  height: 80rpx;
}

.main-function-panel > button > .title {
  width: calc(100% - 110rpx);
  text-align: center;
  font-size: 32rpx;
}

.main-function-panel > button > .fold {
  width: 30rpx;
  height: 30rpx;
}

.box-operate-panel {
  height: 80rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.box-operate-panel > button {
  width: 150rpx;
  height: 46rpx;
  line-height: 46rpx;
  margin: unset;
  padding: unset;
  border: unset;
  font-size: 24rpx;
}

.box-panel {
  height: calc(100% - 638rpx);
  margin-top: 10rpx;
}

.box-panel > .title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}

.box-panel > .scroll {
  height: calc(100% - 60rpx);
}

.box-panel > .scroll  .weui-grids {
  width: 650rpx;
  padding: 0 calc((100% - 650rpx) / 2);
}

.box-panel > .scroll  .weui-grids > .weui-grid {
  width: 162rpx;
  height: 170rpx;
  padding: 10rpx;
  font-size: 24rpx;
}

.box-panel > .scroll  .weui-grids > .weui-grid > .box {
  width: 132rpx;
  height: 140rpx;
  padding: 5rpx;
  background-color: #f3f2f2;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.box-panel > .scroll  .weui-grids > .weui-grid > .box > .light {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.box-panel > .scroll  .weui-grids > .weui-grid > .box > .light > image,
.box-panel > .scroll  .weui-grids > .weui-grid > .box > .light > view {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.box-panel > .scroll  .weui-grids > .weui-grid > .box > .name {
  width: 122rpx;
  height: 30rpx;
  text-align: center;
  overflow: hidden;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; */
  text-overflow: ellipsis;
  white-space: nowrap;
}

.green-light {
  background-color: rgba(28, 190, 182, 0.46);
}

.green-light > view {
  background-color: #fff;
}

.red-light {
  background-color: rgba(235, 104, 119, 0.46);
}

.red-light > view {
  background-color: #fff;
}

.grey-light {
  background-color: rgba(153, 153, 153, 0.46);
}

.grey-light > view {
  background-color: #fff;
}
