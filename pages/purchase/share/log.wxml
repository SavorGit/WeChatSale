<!--pages/purchase/share/log.wxml-->
<!--
 | 选品记录列表页面
 |-->


<scroll-view class='container theme-container' scroll-y="true" scroll-with-animation="true" bindscrolltolower="loadMore">
	<view class="list">
		<view class="daily" wx:for="{{share_list}}" wx:key="key" wx:for-item="bean" wx:for-index="index">
			<view class="date">{{index}}</view>
			<view class="hotel theme-panel" wx:for="{{bean}}" wx:key="kk" wx:for-item="item" wx:for-index="idx">
				<view class="name theme-font7">{{item.name}}</view>
				<view class="order-list weui-grids">
					<view class="weui-grid flex_column_center_center" wx:for="{{item.goods}}" wx:key="ks" wx:for-item="its" wx:for-index="ids">
						<view class="goods" bindtap="gotoDishes" data-goods_id="{{its.id}}">
							<image class="img" mode="aspectFill" src="{{its.img}}"></image>
							<view class="name two-line-overflow">{{its.name}}</view>
							<view class="price theme-font5">￥{{its.price}}</view>
						</view>
					</view>

				</view>
			</view>

		</view>
		
	</view>
</scroll-view>