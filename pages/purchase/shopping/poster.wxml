<scroll-view class='container theme-container' scroll-y="true" scroll-with-animation="true">
	<view class="warpper flex_column_center_flexStart">
		<scroll-view class="page-main" scroll-y="true" scroll-with-animation="true">
			<canvas canvas-id="sharePoster" style="height:{{posterPictureHeight}}rpx;"></canvas>
		</scroll-view>
		<view class="page-bottom">
			<view class="btn save-to-album theme-button-welcome" bindtap="savePosterPictureToAlbum">保存到手机相册</view>
		</view>
	</view>
</scroll-view>