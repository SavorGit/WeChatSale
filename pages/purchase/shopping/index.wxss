.list-pnale {
  width: 100%;
  height: calc(100% - 110rpx);
  margin-top: 20rpx;
}

.list-pnale>.tab-bar {
  width: 100%;
  height: 100rpx;
  white-space: nowrap;
}

.list-pnale>.tab-bar .tab-list {
  height: 80rpx;
  padding: 20rpx 0 0 30rpx;
}

.list-pnale>.tab-bar .tab-list>.tab {
  height: 75rpx;
  line-height: 80rpx;
  margin-right: 30rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999999;
  display: inline-block;
}

.list-pnale>.tab-bar .tab-list>.tab.selected {
  border-bottom: 5rpx solid #EB6877;
  color: #333333;
  background-color: unset;
}

.list-pnale>.tab-body {
  width: 100%;
  height: calc(100% - 100rpx);
}

.list-pnale>.tab-body .list {
  width: 100%;
  padding-bottom: 30rpx;
}

.list-pnale>.tab-body .list>.item {
  width: calc(100% - 60rpx);
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
}

.list-pnale>.tab-body .list>.item>.pic {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.list-pnale>.tab-body .list>.item>.bottom {
  padding: 20rpx 30rpx;
}

.list-pnale>.tab-body .list>.item>.bottom>.name {
  font-size: 32rpx;
}

.list-pnale>.tab-body .list>.item>.bottom>.bottom {
  padding: 20rpx 0;
}

.list-pnale>.tab-body .list>.item>.bottom>.bottom>.price {
  font-size: 32rpx;
}

.list-pnale>.tab-body .list>.item>.bottom>.bottom>.fa {
  font-size: 48rpx;
}