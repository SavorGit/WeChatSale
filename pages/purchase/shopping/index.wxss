.main-panel {
  width: 100%;
  height: calc(100% - 110rpx);
}

.main-panel>.tab-bar {
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
}

.main-panel>.tab-bar .tab-list {
  height: 88rpx;
  padding: 0 30rpx;
}

.main-panel>.tab-bar .tab-list>.tab {
  height: 83rpx;
  line-height: 88rpx;
  margin-right: 20rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  display: inline-block;
}

.main-panel>.tab-bar .tab-list>.tab:last-child {
  margin-right: 30rpx;
}

.main-panel>.tab-bar .tab-list>.tab.selected {
  border-bottom: 5rpx solid #F44444;
  color: #F44444;
  background-color: unset;
}

.main-panel>.tab-body {
  width: 100%;
  height: calc(100% - 100rpx);
}

.main-panel>.tab-body .list {
  width: 100%;
}

.main-panel>.tab-body .list>.item {
  width: calc(100% - 40rpx);
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 10rpx;
}

.main-panel>.tab-body .list>.item>.top,
.main-panel>.tab-body .list>.item>.top>.pic {
  width: 100%;
  height: 400rpx;
}

.main-panel>.tab-body .list>.item>.top>.pic {
  border-radius: 10rpx 10rpx 0 0;
}

.main-panel>.tab-body .list>.item>.top>.marker {
  width: 80rpx;
  height: 43rpx;
  line-height: 43rpx;
  text-align: center;
  margin-top: -380rpx;
  margin-left: -10rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
}

.main-panel>.tab-body .list>.item>.bottom {
  width: calc(100% - 60rpx);
  padding: 20rpx 30rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.name {
  font-size: 28rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom {
  width: 100%;
  padding-top: 20rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom>.left>.price {
  font-size: 28rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom>.left>.price>text {
  margin-left: 5rpx;
  font-size: 32rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom>.left>.market {
  margin-left: 30rpx;
  text-decoration: line-through;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom>.right>.fa {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom>.right>.fa-television {
  margin-right: 50rpx;
}

.main-panel>.tab-body .list>.item>.bottom>.bottom>.right>.fa-cart-plus {
  font-size: 32rpx;
  border: 3rpx solid #F44444;
  border-radius: 50%;
}

.main-panel>.tab-body .list>.item:last-child {
  margin-bottom: 20rpx;
}