<!--pages/purchase/shopping/search_result.wxml-->
<!--
 | 【商城】搜索结果页面
 |-->


<scroll-view class='container theme-container' style='height: calc(100vh - 46px - {{statusBarHeight + SystemInfo.screenBottomSpace}}px);' scroll-y="true" scroll-with-animation="true" bindscrolltolower="loadMore">
	<view class="page flex_column_center_flexStart">

		<!-- 搜索面板 -->
		<view class="search-panel flex_row_center_spaceBetween theme-panel">
			<view class="search-bar flex_row_center_spaceBetween">
				
				<input class="search theme-font3" placeholder="请输入搜索关键词" value="{{input_keywords}}"  bindinput="inputSearch" ></input>
        <view class="fa fa-search theme-font3" aria-hidden="true" bindtap="searchGoods"></view>
			</view>
			<!--
			<view class="shopping-cart flex_column_flexStart_flexStart">
				<view class="fa fa-shopping-cart" aria-hidden="true"></view>
				<view class="marker">10</view>
			</view>
      -->
		</view>

		<!-- 主面板 -->
		<view class="main-panel flex_column_center_flexStart">
			<view class="head flex_column_center_center">
				<view class="content">共为您找到{{total}}件“{{keywords}}“相关的商品</view>
			</view>
			<view class="body flex_column_center_flexStart">
				<view class="list flex_column_center_flexStart">
					<view class="item flex_column_center_flexStart theme-panel" wx:for="{{goods_list}}" wx:key="key" wx:for-item="bean" wx:for-index="index">
						<view class="top flex_column_flexStart_flexStart" bindtap="gotoGoodsDetail" data-goods_id="{{bean.id}}">
							<image class="pic" mode="aspectFill" src="{{bean.img_url}}"></image>
						</view>
						<view class="bottom flex_column_flexStart_flexStart">
							<view class="name two-line-overflow" bindtap="gotoGoodsDetail" data-goods_id="{{bean.id}}">{{bean.name}}</view>
							<view class="bottom flex_row_center_spaceBetween" > 
								<view class="left flex_row_center_flexStart" bindtap="gotoGoodsDetail" data-goods_id="{{bean.id}}">
									<view class="price theme-font5">￥<text>{{bean.price}}</text></view>
									<view class="price market theme-font3">￥{{bean.line_price}}</view>
								</view>
								<view class="right flex_row_center_flexEnd" bindtap="creatPoster"  data-goods_id="{{bean.id}}">
									<view class="fa fa-download theme-font5" aria-hidden="true"></view>
								</view>
							</view>
						</view>
					</view>
					
					
				</view>
			</view>
		</view>
	</view>
</scroll-view>