/* pages/adv/index.wxss */

.row {
  width: 670rpx;
  height: 440rpx;
  padding: 40rpx 40rpx 0 40rpx;
}

.row:last-child {
  padding-bottom: 40rpx;
}

.row>.cover,
.row>.btn-launch-tv {
  width: 670rpx;
  padding: 0;
  margin: 0;
  border: 0;
}

.row>.cover {
  height: 370rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.row>.btn-launch-tv {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  text-align: center;
  border-radius: 0 0 10rpx 10rpx;
}