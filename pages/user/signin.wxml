<!--pages/user/signin.wxml-->
<!--
 | 用户注册页面 [品鉴酒]
 |-->


<scroll-view class='container theme-container' scroll-y="true" scroll-with-animation="true">
  <!-- <form bindsubmit="userRegist"> -->
    <view class="panel input-form theme7">
      <view class="body">
        <view class="row flex_row_center_spaceBetween">
          <view class="label-group flex_row_center">
            <view class="label theme-font1">姓名</view>
            <view class="flag theme-font5">*</view>
          </view>
          <view class="input-group">
            <input class="input"  name="name" placeholder="请输入您的姓名" bindinput="nameOnInput" maxlength="30" focus="{{pname_focus}}"></input>
          </view>
        </view>
        <view class="row flex_row_center_spaceBetween">
          <view class="label-group flex_row_center">
            <view class="label theme-font1">手机号</view>
            <view class="flag theme-font5">*</view>
          </view>
          <view class="input-group flex_row_center_spaceBetween">
            <input class="input" placeholder="请输入手机号" name='mobile' type='number' bindinput="mobileOnInput" focus="{{mobile_focus}}"></input>
          </view>
        </view>
        <view class="row valicode flex_row_center_spaceBetween">
          <view class="label-group flex_row_center">
            <view class="label theme-font1">验证码</view>
            <view class="flag theme-font5">*</view>
          </view>
          <view class="input-group flex_row_center_spaceBetween">
            <input class="input" placeholder="请输入手机验证码" bindinput="verifyCodeOnInput" name='verify_code' focus="{{verify_code_focus}}"></input>
            <view class="btn" wx:if="{{is_get_sms_code==0}}" data-mobile='{{register_info.mobile}}' bindtap='getSmsCode'>获取</view>

            <view wx:else class="btn-get-code disable">{{sms_time_djs}} S</view>
          </view>
        </view>
        <view class="row word-flow flex_row_flexStart_spaceBetween">
          <view class="label-group flex_row_center">
            <view class="label theme-font1">所属餐厅</view>
            <view class="flag theme-font5">*</view>
          </view>
          <view class="input-group flex_column_center_flexStart">
            <input class="input" name="hotel_name" placeholder="请输入餐厅名称" value="{{register_info.hotel_name}}" bindinput="searchHotel"></input>
            <scroll-view class="choose-list" scroll-y="true" scroll-with-animation="true" wx:if="{{hotel_list.length>0}}">
              <view class="list">
                <block wx:for="{{hotel_list}}" wx:key="key" wx:for-item="bean" wx:for-index="index">
                  <view class="item" data-index="{{index}}" bindtap="selectMyHotel">{{bean.hotel_name}}</view>
                </block>
                <!-- <view class="item selected">bbbb</view>
                <view class="item">cc</view>
                <view class="item">ee</view>
                <view class="item">dd</view> -->
              </view>
            </scroll-view>
          </view>
        </view>
      </view>
    </view>
    <view class="btn-group">
      <button class="submit theme-button-welcome" bindtap="onGetUserInfo" disabled="{{addDisabled}}">注册并登录</button>
    </view>
  <!-- </form> -->
</scroll-view>