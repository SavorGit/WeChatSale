.panel {
  width: 100%;
}

.panel>.title-bar {
  width: calc(100% - 40rpx);
  height: 40rpx;
  padding: 15rpx 20rpx;
}

.panel>.title-bar>.title {
  font-size: 28rpx;
  font-weight: 500;
}

.panel>.body {
  width: 100%;
}

.panel>.body>.list {
  width: 100%;
  padding-bottom: 10rpx;
}

.panel>.body>.list>.item {
  width: 100%;
  padding: 10rpx 0;
}

.panel>.body>.list>.item:first-child {
  padding-top: 0;
}

.panel>.body>.list>.item>.task {
  background-color: rgb(251, 244, 242);
}

.panel>.body>.list>.item>.task>.left {
  width: 200rpx;
  height: 100%;
}

.panel>.body>.list>.item>.task>.left>.pic {
  width: 197rpx;
  height: 197rpx;
  border: 3rpx dotted rgb(187, 187, 187);
  border-radius: 20rpx;
}

.panel>.body>.list>.item>.task>.left>.btn {
  width: 200rpx;
  height: 60rpx;
  border-radius: 8rpx;
  border: 0;
  padding: 0;
  margin: 0;
}

.panel>.body>.list>.item>.task>.left>.btn .icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 0;
  margin: 0;
}

.panel>.body>.list>.item>.task>.left>.btn .text {
  padding-left: 10rpx;
  font-size: 28rpx;
}

.panel>.body>.list>.item>.task>.right {
  width: calc(100% - 220rpx);
  height: 100%;
}

.panel>.body>.list>.item.sale>.task {
  width: calc(100% - 70rpx);
  height: 300rpx;
  padding: 15rpx;
  border-radius: 20rpx;
}

.window {
  width: 100%;
  height: 100%;
}

.window>.title-bar {
  width: calc(100% - 50rpx);
  height: 50rpx;
  padding: 10rpx 25rpx;
}

.window>.title-bar>.title {
  font-size: 32rpx;
}

.window>.option-bar {
  width: calc(100% - 40rpx);
  height: 30rpx;
  padding: 20rpx;
  margin-top: -70rpx;
}

.window>.option-bar>.btn {
  width: 30rpx;
  height: 30rpx;
}

.window>.option-bar>.btn>.icon {
  width: unset;
  height: unset;
  font-size: 32rpx;
  margin: 0;
}

.window>.body {
  width: 100%;
  height: calc(100% - 70rpx);
}

.window>.body .wrapper {
  width: calc(100% - 40rpx);
  padding: 20rpx;
}

.panel.broadcast {
  height: 60rpx;
}

.panel.broadcast>.icon {
  width: 40rpx;
  height: 30rpx;
  margin: 0 35rpx;
}

.panel.broadcast>.broadcast-list {
  width: calc(100% - 30rpx);
  padding: 0 15rpx;
  height: 36rpx;
}

.panel.broadcast>.broadcast-list swiper-item {
  width: 100%;
  font-size: 24rpx;
}

.panel.broadcast>.broadcast-list swiper-item>.user-head {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}

.panel.broadcast>.broadcast-list swiper-item>.tip {
  width: calc(100% - 46rpx);
}

.panel.progress>.body>.list>.item>.task>.right>.name,
.panel.progress>.body>.list>.item>.task>.right>.price,
.panel.invalid>.body>.list>.item>.task>.right>.name,
.panel.invalid>.body>.list>.item>.task>.right>.price {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
}

.panel.progress>.body>.list>.item>.task>.right>.price>.icon,
.panel.invalid>.body>.list>.item>.task>.right>.price>.icon {
  width: unset;
  height: unset;
  margin: 0;
}

.panel.progress>.body>.list>.item>.task>.right>.price>.text,
.panel.invalid>.body>.list>.item>.task>.right>.price>.text {
  padding-left: 6rpx;
}

.panel.progress>.body>.list>.item>.task>.right>.btn,
.panel.invalid>.body>.list>.item>.task>.right>.btn {
  width: calc(100% - 20rpx);
  padding: 10rpx;
  border-radius: 8rpx;
  box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 6px 0px;
}

.panel.progress>.body>.list>.item>.task>.right>.btn>.reward,
.panel.invalid>.body>.list>.item>.task>.right>.btn>.reward {
  width: 128rpx;
  border-right: 2rpx solid rgb(251, 244, 242);
}

.panel.progress>.body>.list>.item>.task>.right>.btn>.reward>.icon,
.panel.invalid>.body>.list>.item>.task>.right>.btn>.reward>.icon {
  width: 2em;
  height: 2em;
  font-size: 24rpx;
}

.panel.progress>.body>.list>.item>.task>.right>.btn>.reward>.icon>.fa-usd,
.panel.invalid>.body>.list>.item>.task>.right>.btn>.reward>.icon>.fa-usd {
  color: #F44444;
}

.panel.progress>.body>.list>.item>.task>.right>.btn>.reward>.text,
.panel.invalid>.body>.list>.item>.task>.right>.btn>.reward>.text {
  font-size: 24rpx;
}

.panel.progress>.body>.list>.item>.task>.right>.btn>.tips,
.panel.invalid>.body>.list>.item>.task>.right>.btn>.tips {
  width: calc(100% - 130rpx);
}

.panel.progress>.body>.list>.item>.task>.right>.btn>.tips>.tip,
.panel.invalid>.body>.list>.item>.task>.right>.btn>.tips>.tip {
  font-size: 28rpx;
  font-weight: 400;
}

.panel.available,
.panel.invalid {
  margin-top: 20rpx;
}

.panel.available>.body>.list>.item.sale>.task {
  height: 220rpx;
}

.panel.available>.body>.list>.item>.task>.right>.top {
  width: 100%;
}

.panel.available>.body>.list>.item>.task>.right>.top>.left {
  width: calc(100% - 130rpx);
  min-height: 100rpx;
}

.panel.available>.body>.list>.item>.task>.right>.top>.left>.name,
.panel.available>.body>.list>.item>.task>.right>.top>.left>.tip {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
}

.panel.available>.body>.list>.item>.task>.right>.top>.right {
  width: 130rpx;
}

.panel.available>.body>.list>.item>.task>.right>.top>.right>.btn {
  width: 126rpx;
  height: 126rpx;
  font-size: 28rpx;
  border-radius: 50%;
  border: 0;
  padding: 0;
  margin: 0;
}

.panel.available>.body>.list>.item>.task>.right>.bottom {
  width: 100%;
  height: 50rpx;
}

.panel.available>.body>.list>.item>.task>.right>.bottom>.progress {
  width: 100%;
  font-size: 24rpx;
  color: rgba(242, 159, 146, 1);
}

.panel.invalid>.body>.list>.item>.cover {
  width: 100%;
  height: 330rpx;
  margin-top: -330rpx;
  background-color: rgba(0, 0, 0, 0.26);
}

.panel.invalid>.body>.list>.item>.cover>.top,
.panel.invalid>.body>.list>.item>.cover>.bottom {
  width: calc(100% - 40rpx);
  height: 50rpx;
  padding: 20rpx;
}

.panel.invalid>.body>.list>.item>.cover>.top>.btn {
  font-size: 48rpx;
  padding: 0;
  border: 0;
  margin: 0;
}

.panel.invalid>.body>.list>.item>.cover>.middle {
  width: calc(100% - 40rpx);
  height: calc(100% - 180rpx);
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: 500;
}

.window.sale-detail,
.window.judge {
  border-radius: 10rpx;
}

.window.sale-detail>.body .wrapper>.goods {
  width: 100%;
  height: 310rpx;
  padding: 5rpx 0;
}

.window.sale-detail>.body .wrapper>.goods>.pic {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.window.sale-detail>.body .wrapper>.goods>.name {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
}

.window.sale-detail>.body .wrapper>.goods>.progress {
  width: 80%;
}

.window.sale-detail>.body .wrapper>.goods>.tip {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
}

.window.sale-detail>.body .wrapper>.desc {
  padding: 10rpx 0;
}

.window.sale-detail>.body .wrapper>.btn-group {
  width: 100%;
  padding: 10rpx 0;
}

.window.sale-detail>.body .wrapper>.btn-group>.btn {
  width: 604rpx;
  height: 106rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
  border: 0;
  padding: 0;
  margin: 0;
}


.window.judge>.option-bar,
.window.judge>.option-bar>.btn {
  z-index: 2;
}

.window.judge>.body {
  margin-top: -66rpx;
}

.window.judge>.body .wrapper {
  width: 100%;
  padding: 0;
  margin: 0;
  border: 0;
}

.window.judge>.body .wrapper>.top {
  width: 100%;
  height: 396rpx;
}

.window.judge>.body .wrapper>.top>.pic {
  width: 100%;
  height: 100%;
  border-radius: 10rpx 10rpx 0 0;
  z-index: 0;
}

.window.judge>.body .wrapper>.bottom {
  width: 100%;
  padding-top: 40rpx;
}

.window.judge>.body .wrapper>.bottom>.row {
  width: calc(100% - 40rpx);
  padding: 10rpx 20rpx;
}

.window.judge>.body .wrapper>.bottom>.row>.label {
  width: 150rpx;
  font-size: 28rpx;
}

.window.judge>.body .wrapper>.bottom>.row>.value {
  width: calc(100% - 166rpx);
  height: 44rpx;
  padding: 5rpx;
  font-size: 28rpx;
  border: 3rpx solid rgb(187, 187, 187);
}

.window.judge>.body .wrapper>.bottom>.row>.value>.input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.window.judge>.body .wrapper>.bottom>.row>.value>picker.input .text {
  width: calc(100% - 30rpx);
}

.window.judge>.body .wrapper>.bottom>.row>.value>picker.input .icon {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin: 0;
}

.window.judge>.body .wrapper>.bottom>.row.btn-group {
  padding-top: 50rpx;
}

.window.judge>.body .wrapper>.bottom>.row.btn-group>.btn {
  width: 308rpx;
  height: 90rpx;
  font-size: 32rpx;
  border-radius: 20rpx;
  border: 0;
  margin: 0;
  padding: 0;
}