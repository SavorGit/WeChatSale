/* pages/user/sellindex.wxss */
@import '/pages/task/index.wxss';
/**
 * 注册用户首页 [品鉴酒]
 */


.wrapper {
  width: 100%;
  min-height: 100%;
}

/* .btn {
  width: 402rpx;
