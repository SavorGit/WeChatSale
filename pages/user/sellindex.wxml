<!--pages/user/sellindex.wxml-->
<wxs src="../../app.wxs" module="app" />
<!--
 | 注册用户首页 [品鉴酒]
 |-->



<scroll-view class='container theme-container' scroll-y="true" scroll-with-animation="true" style="height:calc(100vh - 46px);">
  <view class="wrapper flex_column_center_flexStart">

    <!-- 广播模块面板 -->
    <view class="panel broadcast flex_row_center theme-broadcast-panel" wx:if="{{loop_play_list.length>0}}">
      <swiper class="broadcast-list" autoplay="true" interval="3000" duration="500" circular="true" vertical="true">
        <block wx:for="{{loop_play_list}}" wx:for-item="bean" wx:key="key" wx:for-index="index">
          <swiper-item class="flex_row_center_spaceBetween theme-font4">
            <image class="user-head" mode="aspectFill" src="{{bean.avatar_url}}"></image>
            <view class="tip one-line-overflow">{{bean.content}}</view>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!-- 进行中任务面板 -->
    <view class="panel progress theme-panel" wx:if="{{task_list.inprogress.length>0}}">
      <view class="title-bar flex_row_center_flexStart">
        <view class="title">进行中任务</view>
      </view>
      <view class="body">
        <view class="list flex_column_center_flexStart">

          <block wx:for='{{task_list.inprogress}}' wx:for-item="bean" wx:key="key" wx:for-index="index">


            <view class="item sale flex_column_center_center" wx:if="{{bean.task_type==22}}">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween">
                  <image bindtap="previewImage" data-src="{{bean.img_url}}" class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                  <view class="btn launch-tv flex_row_center_center theme-button3" bindtap="examTasteWineTask" data-index="{{index}}" data-pop_type="2">
                    <image class="icon" mode="aspectFit" src="/images/icon/999999_interact.png" />
                    <view class="text">电视广告</view>
                  </view>
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="price flex_row_center_flexStart">
                    <view class="icon fa fa-cny"></view>
                    <view class="text">{{bean.price}}</view>
                  </view>
                  <view class="btn flex_row_center_spaceBetween theme-button-red" bindtap="examTasteWineTask" data-index="{{index}}" data-pop_type="1">
                    <view class="reward flex_column_center_center theme-font-F9DE59">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text">{{bean.integral}}积分/次</view>
                    </view>
                    <view class="tips flex_column_center_center">
                      <view class="tip">邀请客人试饮</view>
                      <view class="tip">剩余{{bean.people_num}}次</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
            <!--抽奖-->
            <view class="item sale flex_column_center_center" wx:elif="{{bean.task_type==23 && bean.activity_status==0}}">
              <view class="task lottery flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="btn flex_row_center_spaceBetween theme-button-welcome" bindtap="popStartLotterActivyt" data-index="{{index}}" data-pop_type="1">
                    <view class="reward flex_column_center_center theme-font-F9DE59">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text">{{bean.integral}}积分/次</view>
                    </view>
                    <view class="tips flex_column_center_center">
                      <view class="tip">发起餐厅抽奖活动</view>
                      <view class="tip">{{bean.task_expire_time}}过期</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
            <!--抽奖-->
            <view class="item sale flex_column_center_center" wx:elif="{{bean.task_type==23 && bean.activity_status>=1}}">
              <view class="task lottery flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="btn flex_row_center_spaceBetween theme-button-welcome" data-index="{{index}}" data-pop_type="1">
                    <view class="reward flex_column_center_center theme-font-F9DE59">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text">{{bean.integral}}积分/次</view>
                    </view>
                    <view class="tips flex_row_flexStart_flexEnd" style="height:100%;">
                      <view class="tip flex_row_center_center" style="width:calc(100% - 50rpx);height:100%;font-size:28rpx;">进行中...</view>
                      <view bindtap="editLotteryActivityPopWind" data-index="{{index}}" class="btn fa fa-pencil" style="font-size:48rpx;" aria-hidden="true" wx:if="{{bean.activity_status==1}}"></view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
            <view class="item sale flex_column_center_center" wx:elif="{{bean.task_type==25 || bean.task_type==26 || bean.task_type==6}}">
              <view class="task lottery flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween" catchtap="viewInprogressTaskDetailInfo" data-index="{{index}}">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="tips">
                    <view wx:if="{{bean.progress!='' && bean.task_type==25}}" class="tip theme-font-F44444"> {{bean.progress}}{{bean.today_integral}}</view>
                    <view wx:elif="{{bean.progress!='' && bean.task_type==26}}" class="tip theme-font-F44444">{{bean.progress}}{{bean.today_integral}}</view>
                    <view wx:elif="{{bean.progress!='' && bean.task_type==6}}" class="tip theme-font-F44444">{{bean.progress}}{{bean.today_integral}}</view>
                  </view>
                  <view class="btn flex_row_center_spaceBetween theme-button-welcome" data-index="{{index}}" data-pop_type="1">
                    <view class="reward flex_column_center_center theme-font-F9DE59">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text one-line-overflow">{{bean.integral}}积分/次</view>
                    </view>
                    <view class="tips flex_row_flexStart_flexEnd" style="height:100%;">
                      <view wx:if="{{bean.task_type==25}}" class="tip flex_row_center_center" style="width:calc(100% - 50rpx);height:100%;font-size:28rpx;" catchtap="goToHotelAdv" data-keys="{{index}}">点播</view>
                      <view wx:elif="{{bean.task_type==26}}" class="tip flex_row_center_center" style="width:calc(100% - 50rpx);height:100%;font-size:28rpx;" catchtap="popInviteMemberWind" data-keys="{{index}}">发优惠券</view>
                      <view wx:elif="{{bean.task_type==6}}" class="tip flex_row_center_center" style="width:calc(100% - 50rpx);height:100%;font-size:28rpx;" catchtap="sendPostBook" data-keys="{{index}}">发邀请函</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
            <!-- 团购海报售卖 -->
            <view class="item poster flex_column_center_center" wx:elif="{{bean.task_type==24}}">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_flexStart" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                  <view class="patch flex_row_center_center theme-block-red">团购售卖</view>
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1" bindtap="getTgTaskPopWind" data-index="{{index}}">{{bean.task_name}}</view>
                  <view class="price flex_row_center_flexStart theme-font-F44444" bindtap="getTgTaskPopWind" data-index="{{index}}">
                    <view class="icon fa fa-cny"></view>
                    <view class="text">{{bean.price}}</view>
                    <!-- <view class="btn fa fa-pencil flex_row_center_center theme-font7" aria-hidden="true"></view> -->
                  </view>
                  <view class="btn flex_row_center_spaceBetween theme-button-welcome-dark">
                    <view class="reward flex_column_center_center theme-font-F9DE59" bindtap="getTgTaskPopWind" data-index="{{index}}">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text">积分奖励</view>
                    </view>
                    <view class="tips flex_row_center_center" style="height:100%;" bindtap="openDrawGroupBuyPosterWindow" data-index="{{index}}">
                      <view class="icon fa fa-qrcode flex_row_center_center" aria-hidden="true"></view>
                      <view class="tip flex_row_center_center">生成销售码</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>

            <view class="item old flex_column_center_center" wx:else>
              <view class="task flex_row_center theme7 theme-font1" data-index='{{index}}' data-task-id='{{bean.task_id}}' bindtap='popTaskDetailWindow'>
                <image wx:if='{{app.typeOf(bean.img_url) == "string" && bean.img_url != ""}}' class="icon" src="{{bean.img_url}}"></image>
                <view wx:else class="icon fa-stack fa-lg">
                  <view class="fa fa-television fa-stack-2x"></view>
                  <view class="fa fa-tasks fa-stack-1x"></view>
                </view>
                <view class="info flex_column_flexStart_flexEnd">
                  <view class="name one-line-overflow theme-font1">{{bean.task_name}}</view>
                  <view class="detail one-line-overflow theme-font3">{{bean.desc}}</view>
                </view>
                <view class="profit-and-progress flex_column_center_center">
                  <view class="profit one-line-overflow theme-font6">{{bean.integral}}</view>
                  <view class="progress one-line-overflow theme-font3">{{bean.progress}}</view>
                </view>
              </view>
            </view>
          </block>

        </view>
      </view>
    </view>

    <!-- 可领取任务面板 -->
    <view wx:if="{{task_list.canreceive.length>0}}" class="panel available theme-panel">
      <view class="title-bar flex_row_center_flexStart">
        <view class="title">可领取任务</view>
      </view>
      <view class="body">
        <view class="list flex_column_center_flexStart">

          <block wx:for='{{task_list.canreceive}}' wx:for-item="bean" wx:key="key" wx:for-index="index">


            <view class="item sale flex_column_center_center" wx:if="{{bean.task_type==22}}">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="top flex_row_center_spaceBetween">
                    <view class="left flex_column_flexStart_spaceBetween">
                      <view class="name">{{bean.task_name}}</view>
                      <view class="tip theme-font5">可收益{{bean.integral}}积分</view>
                    </view>
                    <view class="right flex_row_center_flexEnd" bindtap="getTaskPopWind" data-index="{{index}}">
                      <view class="btn flex_column_center_center theme-button-red">领取</view>
                    </view>
                  </view>
                  <view class="bottom">
                    <progress class="progress" stroke-width="14rpx" border-radius="7rpx" backgroundColor="rgb(187, 187, 187)" activeColor="rgb(242, 159, 146)" percent="{{bean.percent}}" font-size="24rpx">剩余{{bean.remain_percent}}%</progress>
                  </view>
                </view>
              </view>
            </view>
            <!--抽奖-->
            <view class="item sale flex_column_center_center" wx:elif="{{bean.task_type==23}}">
              <view class="task lottery flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="top flex_row_center_spaceBetween">
                    <view class="left flex_column_flexStart_spaceBetween">
                      <view class="name">{{bean.task_name}}</view>
                      <view class="tip theme-font5">可收益{{bean.integral}}积分</view>
                    </view>
                    <view class="right flex_row_center_flexEnd" bindtap="getLotteryPopWind" data-index="{{index}}">
                      <view class="btn flex_column_center_center theme-button-welcome">领取</view>
                    </view>
                  </view>
                  <view class="bottom">
                    <progress class="progress" stroke-width="14rpx" border-radius="7rpx" backgroundColor="rgb(187, 187, 187)" activeColor="rgb(242, 159, 146)" percent="{{bean.percent}}" font-size="24rpx">剩余{{bean.remain_percent}}%</progress>
                  </view>
                </view>
              </view>
            </view>

            <!-- 团购海报售卖 -->
            <view class="item poster flex_column_center_center" wx:elif="{{bean.task_type==24}}">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_flexStart">
                  <image bindtap="previewImage" data-src="{{bean.img_url}}" class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                  <view class="patch flex_row_center_center theme-block-red">团购售卖</view>
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name">{{bean.task_name}}</view>
                  <view class="top flex_row_center_spaceBetween">
                    <view class="left flex_column_flexStart_spaceBetween">
                      <view class="price flex_row_center_flexStart theme-font7">
                        <view class="icon fa fa-cny"></view>
                        <view class="text">{{bean.price}}</view>
                      </view>
                      <view class="tip theme-font5">可收益{{bean.integral}}积分+提成</view>
                    </view>
                    <view class="right flex_row_center_flexEnd" bindtap="getLotteryPopWind" data-index="{{index}}">
                      <view class="btn flex_column_center_center theme-button-red">领取</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
            <view class="item sale flex_column_center_center" wx:elif="{{bean.task_type==25 || bean.task_type==26 || bean.task_type==6}}">
              <view class="task lottery flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween" bindtap="previewImage" data-src="{{bean.img_url}}">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="top flex_row_center_spaceBetween">
                    <view class="left flex_column_flexStart_spaceBetween">
                      <view class="name">{{bean.task_name}}</view>
                      <view class="tip theme-font5">每次完成可收益{{bean.integral}}积分</view>
                    </view>
                    <view class="right flex_row_center_flexEnd" bindtap="getLotteryPopWind" data-index="{{index}}">
                      <view class="btn flex_column_center_center theme-button-welcome">领取</view>
                    </view>
                  </view>
                  <view class="bottom">
                    <progress class="progress" stroke-width="14rpx" border-radius="7rpx" backgroundColor="rgb(187, 187, 187)" activeColor="rgb(242, 159, 146)" percent="{{bean.percent}}" font-size="24rpx">剩余{{bean.remain_percent}}%</progress>
                  </view>
                </view>
              </view>
            </view>
            <view class="item old flex_column_center_center" wx:else>
              <view class="task flex_row_center theme7 theme-font1" data-index='{{index}}' data-task-id='{{bean.task_id}}' bindtap='popTaskDetailWindow'>
                <image wx:if='{{app.typeOf(bean.img_url) == "string" && bean.img_url != ""}}' class="icon" src="{{bean.img_url}}"></image>
                <view wx:else class="icon fa-stack fa-lg">
                  <view class="fa fa-television fa-stack-2x"></view>
                  <view class="fa fa-tasks fa-stack-1x"></view>
                </view>
                <view class="info flex_column_flexStart_flexEnd">
                  <view class="name one-line-overflow theme-font1">{{bean.task_name}}</view>
                  <!-- <view class="detail one-line-overflow theme-font3">{{bean.desc}}</view> -->
                  <view class="detail one-line-overflow theme-font3">
                    <rich-text nodes="{{bean.desc}}"></rich-text>
                  </view>
                </view>
                <view class="profit-and-progress flex_column_center_center">
                  <view class="profit one-line-overflow theme-font6">{{bean.integral}}</view>
                  <view class="progress one-line-overflow theme-font3">{{bean.progress}}</view>
                </view>
              </view>
            </view>
          </block>

        </view>
      </view>
    </view>


