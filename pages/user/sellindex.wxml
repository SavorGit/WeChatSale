    <view class="panel invalid" wx:if="{{task_list.invalid.length>0}}">
      <view class="title-bar flex_row_center_flexStart">
        <view class="title">失效任务</view>
      </view>
      <view class="body">
        <view class="list flex_column_center_flexStart">

          <block wx:for="{{task_list.invalid}}" wx:for-item="bean" wx:key="key" wx:for-index="index">


            <view wx:if="{{bean.task_type==22}}" class="item sale flex_column_center_center">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                  <view class="btn launch-tv flex_row_center_center theme-button3">
                    <image class="icon" mode="aspectFit" src="/images/icon/999999_interact.png" />
                    <view class="text">电视广告</view>
                  </view>
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="price flex_row_center_flexStart">
                    <view class="icon fa fa-cny"></view>
                    <view class="text">{{bean.price}}</view>
                  </view>
                  <view class="btn flex_row_center_spaceBetween theme-button-red" bindtap="examTasteWineTask" data-index="{{index}}" data-pop_type="1">
                    <view class="reward flex_column_center_center theme-font-F9DE59">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text">{{bean.integral}}积分/次</view>
                    </view>
                    <view class="tips flex_column_center_center">
                      <view class="tip">邀请客人试饮</view>
                      <view class="tip">剩余{{bean.people_num}}次</view>
                    </view>
                  </view>
                </view>
              </view>
              <view class="cover">
                <view class="top flex_row_center_flexEnd" bindtap="delInvalid" data-index="{{index}}">
                  <view class="btn fa fa-trash-o theme-font4" aria-hidden="true"></view>
                </view>
                <view class="middle flex_column_center_center theme-font4">{{bean.itype==1?'已失效':'已完成'}}</view>
                <view class="bottom"></view>
              </view>
            </view>
            <view wx:elif="{{bean.task_type==23}}" class="item lottery flex_column_center_center">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="btn flex_row_center_spaceBetween theme-button-welcome">
                    <view class="reward flex_column_center_center theme-font-F9DE59">
                      <view class="icon fa-stack">
                        <view class="fa fa-circle fa-stack-2x"></view>
                        <view class="fa fa-usd fa-stack-1x"></view>
                      </view>
                      <view class="text">{{bean.integral}}积分/次</view>
                    </view>
                    <view class="tips flex_column_center_center">
                      <view class="tip">发起餐厅抽奖活动</view>
                      <view class="tip" style="font-size:24rpx;">{{bean.task_expire_time}}过期</view>
                    </view>
                  </view>
                </view>
              </view>
              <view class="cover">
                <view class="top flex_row_center_flexEnd" bindtap="delInvalid" data-index="{{index}}">
                  <view class="btn fa fa-trash-o theme-font4" aria-hidden="true"></view>
                </view>
                <view class="middle flex_column_center_center theme-font4">{{bean.itype==1?'已失效':'已完成'}}</view>
                <view class="bottom"></view>
              </view>
            </view>

            <!-- 团购海报售卖 -->
            <view wx:elif="{{bean.task_type==24}}" class="item poster flex_column_center_center">
              <view class="task flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_flexStart">
                  <image bindtap="previewImage" data-src="{{bean.img_url}}" class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                  <view class="patch flex_row_center_center theme-block-red">团购售卖</view>
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name">{{bean.task_name}}</view>
                  <view class="top flex_row_center_spaceBetween">
                    <view class="left flex_column_flexStart_spaceBetween">
                      <view class="price flex_row_center_flexStart theme-font7">
                        <view class="icon fa fa-cny"></view>
                        <view class="text">{{bean.price}}</view>
                      </view>
                      <view class="tip theme-font5">可收益{{bean.integral}}积分+提成</view>
                    </view>
                    <view class="right flex_row_center_flexEnd" bindtap="getLotteryPopWind" data-index="{{index}}">
                      <view class="btn flex_column_center_center theme-button-red">领取</view>
                    </view>
                  </view>
                </view>
              </view>
              <view class="cover">
                <view class="top flex_row_center_flexEnd" bindtap="delInvalid" data-index="{{index}}">
                  <view class="btn fa fa-trash-o theme-font4" aria-hidden="true"></view>
                </view>
                <view class="middle flex_column_center_center theme-font4">{{bean.itype==1?'已失效':'已完成'}}</view>
                <view class="bottom"></view>
              </view>
            </view>
            <view wx:elif="{{bean.task_type==25 || bean.task_type==26 || bean.task_type==6}}" class="item sale flex_column_center_center">
              <view class="task lottery flex_row_center_spaceBetween">
                <view class="left flex_column_flexStart_spaceBetween">
                  <image class="pic" mode="aspectFill" src="{{bean.img_url}}" />
                  <!--
                  <view class="btn launch-tv flex_row_center_center theme-button3">
                    <image class="icon" mode="aspectFit" src="/images/icon/999999_interact.png" />
                    <view class="text">电视广告</view>
                  </view>
                  -->
                </view>
                <view class="right flex_column_flexStart_spaceBetween">
                  <view class="name theme-font1">{{bean.task_name}}</view>
                  <view class="tips">
