/* pages/welcome/index.wxss */

.page-main {
  width: 100%;
  height: calc(100% - 100rpx);
}

.page-main .card {
  width: 670rpx;
  height: 270rpx;
  margin: 10rpx 40rpx;
}

.page-main .card:first-child {
  margin-top: 40rpx;
}

.page-main .card:last-child {
  margin-bottom: 40rpx;
}

.page-main .card > .body {
  width: calc(100% - 60rpx);
  height: calc(100% - 132rpx);
  padding: 25rpx 30rpx 35rpx 30rpx;
  margin-bottom: 2rpx;
  border-radius: 5rpx 5rpx 0 0;
}

.page-main .card > .body > .box-status {
  width: 100%;
  height: 30rpx;
}

.page-main .card > .body > .box-status > .box {
  width: calc(100% - 120rpx);
  font-size: 28rpx;
}

.page-main .card > .body > .box-status > .status {
  width: 120rpx;
  font-size: 24rpx;
}

.page-main .card > .body > .context {
  width: 100%;
  margin-top: 40rpx;
  font-size: 28rpx;
}

.page-main .card > .body > .datetime {
  width: 100%;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.page-main .card > .foot {
  width: calc(100% - 60rpx);
  height: 70rpx;
  padding: 0 30rpx;
  border-radius: 0 0 5rpx 5rpx;
}

.page-main .card > .foot > .btn-del, .page-main .card > .foot > .btn-stop {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 70rpx;
  border-radius: 5rpx;
  text-align: center;
  font-size: 24rpx;
}

.page-bottom {
  width: 100%;
  height: 100rpx;
}

.page-bottom > .btn-add {
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 5rpx;
}
