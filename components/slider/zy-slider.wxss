/* components/slider/zy-slider.wxss */
.container {
  /*height: 100%;*/
  /* width: 100%; */
  width: calc(100% - 36px);
  height: 18px;
  line-height: 18px;
  margin: 10px 18px;
  /* position: relative; */
}

.container>view {
  width: 100%;
  height: 18px;
  line-height: 18px;
}

.container>view:last-child {
  margin-top: -18px;
}

.slider-body {
  height: 2px;
  background-color: #ddd;
  float: left;
  margin: 8px 0;
  /* position: relative; */
}

.body {
  bottom: 60rpx;
  background-color: #19896f;
  z-index: 0.3;
}

.left {
  bottom: 58rpx;
  z-index: 0.1;
}

.right {
  bottom: 62rpx;
  z-index: 0.2;
}

.slider-item {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ddd;
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.6);
  z-index: 2;
}

.min {
  position: relative;
  top: 0rpx;
  /*left: 100rpx;*/
}

.max {
  position: relative;
  top: 0rpx;
  /* bottom: 40rpx; */
  /*left: 600rpx;*/
}

.hide {
  display: none;
}