.address_top {
  height: 56rpx;
  line-height: 56rpx;
  background: #ebebeb;
  color: #999;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.address_bottom {
  height: 168rpx;
  line-height: 168rpx;
  background: #fff;
  color: #000;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx #ebebeb solid;
  margin-left: 15rpx;
}

.address_bottom>.avatar {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
  display: inline-block;
  box-sizing: border-box;
}

.address_bottom>.avatar>.img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.address_bottom>.avatar>.text {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 72rpx;
  background-color: rgb(253, 128, 36);
}

.address_bottom>.name {
  width: 100rpx;
  line-height: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  display: inline-block;
  box-sizing: border-box;
}

.address_bottom>.phone {
  width: calc(100% - 280rpx);
  line-height: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  display: inline-block;
  box-sizing: border-box;
}

.orientation {
  white-space: normal;
  display: inline-block;
  width: 45rpx;
  height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(88, 87, 87);
  text-align: center;
}

.orientation_region {
  padding: 5px 0px;
  width: 45rpx;
  font-size: 20rpx;
  position: fixed;
  top: calc(50% + 60rpx);
  right: 16rpx;
  transform: translate(0, -50%);
  background: rgb(199, 198, 198);
  border-radius: 10px;
}

.orientation_city {
  height: 40rpx;
  line-height: 40rpx;
  color: #000;
  text-align: center;
}

.active {
  color: #2cc1d1;
}

.list-fixed {
  width: calc(100% - 39rpx);
  height: 56rpx;
  line-height: 56rpx;
  position: fixed;
  background: #ebebeb;
  color: #999;
  font-size: 28rpx;
  padding: 0 20rpx;
  z-index: 999;
}

.fixed-title {
  color: #2cc1d1;
}