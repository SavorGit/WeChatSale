/* components/modal/MailList-2.wxss */
@import "/font-awesome.wxss";

/* 通讯录 */
.mask {
  width: 100vw;
  height: 100vh;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.text {
  font-size: 28rpx;
}

.search-bar {
  height: 70rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-bar>.fa-chevron-left {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 30rpx;
}

.search-bar>.search-group {
  width: calc(100% - 160rpx);
  height: 50rpx;
  border: 1rpx solid #000;
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-bar>.search-group>.fa-search {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.search-bar>.search-group>.search-input {
  width: calc(100% - 50rpx);
  height: 50rpx;
  line-height: 50rpx;
}

.mail-list {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.tip-bar {
  width: calc(100% - 60rpx);
  height: 50rpx;
  padding: 10rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.tip-bar>.tip {
  height: 100%;
}

.tip-bar>.tip>.text {
  color: #999999;
}

.content {
  width: 100%;
  height: calc(100% - 90rpx);
  padding-bottom: 20rpx;
  box-sizing: border-box;
  position: fixed;
}

