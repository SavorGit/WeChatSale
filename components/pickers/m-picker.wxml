<!--components/pickers/m-picker.wxml-->
<slot bindtap="showPickerView"></slot>
<view class='mask' wx:if="{{isShowPickerView}}" catchtap="cancel">
  <view class="content" animation="{{animation}}">
    <view class="top">
      <view class="top-text top-left-color" hover-class="top-left-color-hover" catchtap="esc">取消</view>
      <view class="top-text top-right-color" hover-class="top-right-color-hover" catchtap="ok">确定</view>
    </view>
    <picker-view style="width:100%;height:500rpx;" value="{{value}}" bindchange="onChangePickerView" catchtap="onClickPickerView">
      <picker-view-column wx:for="{{range}}" wx:key="colKey" wx:for-item="column" wx:for-index="colIndex">
        <view wx:for="{{column}}" wx:key="rowKey" style="line-height:50px;text-align:center;" class="item">{{item}}</view>
      </picker-view-column>
    </picker-view>
  </view>
</view>