<!-- [面板] 可以选择商品 -->
<template name="goodsPanelCanCheck">
  <radio-group bindchange="checkboxChange">
    <view class="panel can-check-googs">
      <view wx:if='{{app.typeOf(title)=="string"}}' class="title-bar flex_row_center_flexStart">
        <view class="title {{smallTitle?'small':'big'}} theme-font1">{{title}}</view>
        <view class="title {{smallTitle?'small':'big'}} theme-font3" style="margin-left:50rpx;">{{title2}}</view>
      </view>
      <view class="body">
        <block wx:for="{{list}}" wx:for-item="bean" wx:key="key" wx:for-index="index">
          <view class="item flex_column_center_flexStart">
            <view class="row flex_row_center_spaceBetween">
              <view class="left flex_column_center_center theme-font3">{{list.length-index}}</view>
              <view class="center flex_column_center_center">
                <view class="name theme-font3" wx:if="{{bean.goods_name!=''}}">{{bean.goods_name}}</view>
                <view class="name theme-font3">{{bean.idcode}}</view>
                <view class="tag-group flex_row_center_flexStart">
                  <view class="tag theme-font3">{{bean.add_time}}</view>
                </view>
              </view>
              <view class="right flex_column_center_center">
                <view class='btn check flex_column_center_center'>
                  <radio value="{{bean.idcode}}" checked="{{bean.checked}}"></radio>
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </radio-group>
</template>

<!-- [面板] 检查商品 -->
<template name="goodsPanelForChecked">
  <view class="panel check-googs">
    <view wx:if='{{app.typeOf(title)=="string"}}' class="title-bar flex_row_center_flexStart">
      <view class="title {{smallTitle?'small':'big'}} theme-font1">{{title}}</view>
      <view class="title {{smallTitle?'small':'big'}} theme-font3" style="margin-left:50rpx;">{{title2}}</view>
    </view>
    <view class="body">
      <block wx:for="{{list}}" wx:for-item="bean" wx:key="key" wx:for-index="index">
        <view class="item flex_column_center_flexStart">
          <view class="row flex_row_center_spaceBetween">
            <view class="left flex_column_center_center theme-font3">{{list.length-index}}</view>
            <view class="center flex_column_center_center">
              <view class="name theme-font3">{{bean.idcode}}</view>
              <view class="tag-group flex_row_center_flexStart">
                <view class="tag theme-font3">{{bean.add_time}}</view>
              </view>
            </view>
            <view class="right flex_column_center_center">
              <view class='btn chekced flex_column_center_center' style="font-size:48rpx;">
                <view wx:if="{{bean.status==1}}" class="theme-font3" style="font-size:28rpx;">已核销</view>
                <view wx:elif="{{bean.status==2}}" class="theme-font3" style="font-size:28rpx;">已报损</view>
                <view wx:else class='icon fa fa-check-circle {{bean.checked?"theme-font-53BD1D":"theme-font3"}}' aria-hidden="true"></view>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</template>


<!-- [弹窗] 报损原因 -->
<template name="popWindowForLossReportingReason">
  <view wx:if="{{show}}" class="window loss-reporting-reason">
    <view class="mask flex_column_center_center">
      <view class="entity theme-window">
        <view class="option-bar flex_row_center_flexEnd">
          <view class="btn close flex_column_center_center" bindtap="offPopWindForLoss">
            <image class="icon" mode="aspectFill" src="/images/icon/666666_close.png" />
          </view>
        </view>
        <view class="win-body flex_column_center_flexStart">
          <view class="label">请输入报损原因</view>
          <textarea class="value" name="" id="" cols="30" rows="10" placeholder="多行输入" bindinput="inputReason"></textarea>
          <view class="btn submit flex_row_center_center theme-font-6297F2" bindtap="subBreakage">提交</view>
        </view>
      </view>
    </view>
  </view>
</template>