<!--store/pages/goodschargeoff/index.wxml-->
<import src="/store/pages/template/commons" />
<wxs src="/app.wxs" module="app" />

<!--
  -- 核销 首页
  -->
<view class="page check-accept-goods container theme-main">
  <scroll-view class="main" scroll-y="true" scroll-with-animation="true">
    <view class="warper flex_column_center_flexStart">
      <view class="list flex_column_center_flexStart">
        <view wx:for="{{list}}" wx:for-item="bean" wx:key="key" wx:for-index="index" class="item flex_column_center_flexStart">
          <view class="top">
            <view wx:if="{{bean.status==0}}" class="status flex_row_center_flexEnd theme-font-6297F2">待审核</view>
            <view wx:elif="{{bean.status==1}}" class="status flex_row_center_flexEnd theme-font-53BD1D">通过审核</view>
            <view class="title flex_row_center_center theme-font1">{{bean.title}}</view>
          </view>
          <view class="middle">
            <view class="goods-title flex_row_center_flexStart theme-font1">商品信息（{{bean.goodsList.length}}）</view>
            <view class="goods-list flex_column_center_flexStart">
              <view wx:for="{{bean.goodsList}}" wx:for-item="goods" wx:key="goodsKey" wx:for-index="goodsIndex" class="goods flex_row_center_flexStart">
                <view class="left flex_column_center_center theme-font1">{{goods.id}}</view>
                <view class="center flex_column_center_center">
                  <view class="name theme-font1">{{goods.name}}</view>
                  <view class="tag-group flex_row_center_flexStart">
                    <view class="tag theme-font3">{{goods.cate_name}}</view>
                    <view class="tag theme-font3">{{goods.sepc_name}}</view>
                    <view class="tag theme-font3">{{goods.unit_name}}</view>
                  </view>
                  <view class="identifying-code theme-font3">唯一标识：{{goods.code}}</view>
                </view>
              </view>
            </view>
          </view>
          <view class="bottom flex_row_center_spaceBetween">
            <view class="datetime theme-font3">{{bean.title}}</view>
            <view class="profit flex_row_center_spaceBetween">
              <view class="label theme-font3">预计收益</view>
              <view class="value theme-font5">{{bean.profit}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  <view class="foot flex_row_center_spaceAround">
    <view class="btn ok flex_row_center_center theme-button-blue" bindtap="completeStore">新增核销申请</view>
  </view>
</view>