/* store/pages/goodschargeoff/applyCrackReward.wxss */
@import '/utils/panel.wxss';
@import '/window.wxss';

/**
 * 核销 新增核销申请 - 开瓶奖励
 */
.link {
    text-decoration: underline;
}

.link>.text {
    text-decoration: underline;
}

.p-main {
    height: calc(100% - 220rpx);
}

.p-main .panel.upload-pic>.pbody>.tip-group {
    width: calc(100% - 60rpx);
    padding: 10rpx 30rpx;
}

.p-main .panel.upload-pic>.pbody>.tip-group>.tip {
    padding: 5rpx 0;
}

.p-main .panel.upload-pic>.pbody>.pic-group {
    width: calc(100% - 60rpx);
    padding: 10rpx 30rpx;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item {
    padding: 20rpx 0 5rpx;
    border-bottom: 3rpx dashed rgba(187, 187, 187, 1);
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item:last-child {
    border-bottom: unset;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list {
    display: block;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list>.pic-item {
    /*
    width: calc((750rpx - 60rpx - 2 * 20rpx) / 3);
    height: calc((750rpx - 60rpx - 2 * 20rpx) / 3);
    */
    width: calc((100vw - 60rpx) / 3);
    height: calc((100vw - 60rpx) / 3 + 60rpx);
    padding: 10rpx;
    display: inline-block;
    box-sizing: border-box;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list>.pic-item:nth-child(3n + 1) {
    padding: 10rpx 10rpx 10rpx 0;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list>.pic-item:nth-child(3n) {
    padding: 10rpx 0 10rpx 10rpx;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list>.pic-item>.title {
    padding: 5rpx 0;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list>.pic-item>.btn {
    width: calc((100vw - 60rpx - 2 * 20rpx) / 3);
    height: calc((100vw - 60rpx - 2 * 20rpx) / 3);
    border-radius: 10rpx;
}

.p-main .panel.upload-pic>.pbody>.pic-group>.bottle-list>.bottle-item>.pic-list>.pic-item>.btn>.pic {
    border-radius: inherit;
}

.p-foot {
    height: 180rpx;
    padding: 10rpx 0 30rpx;
}

.p-foot>.tip-group {
    width: calc(100% - 50rpx);
    padding: 10rpx 25rpx;
}

.p-foot>.tip-group>.tip {
    padding: 5rpx 0;
}

.p-foot>.button-group {
    width: calc(100% - 50rpx);
    padding: 10rpx 25rpx;
}

.p-foot>.button-group>.btn {
    height: 80rpx;
    border-radius: 8rpx;
    border: 0;
    padding: 0;
    margin: 0;
}

.p-foot>.button-group>.btn.submit {
    width: 548rpx;
}

.window.example {
    width: 730rpx;
    height: 900rpx;
    border-radius: 10rpx;
}