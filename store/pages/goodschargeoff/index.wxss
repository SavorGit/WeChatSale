/* store/pages/goodschargeoff/index.wxss */
@import "/store/pages/template/commons.wxss";

/**
 * 核销 首页
 */
.list {
  width: calc(100% - 20rpx);
  padding: 10rpx;
}

.item {
  width: calc(100% - 40rpx);
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
  background-color: rgba(98, 151, 242, 0.06);
}

.item:first-child {
  margin-top: 0;
}

.item:last-child {
  margin-bottom: 0;
}

.item>.top,
.item>.middle,
.item>.bottom {
  width: 100%;
}

.item>.top>.status,
.item>.top>.title {
  font-size: 36rpx;
  font-weight: bold;
}

.item>.middle>.goods-title {
  font-size: 28rpx;
  font-weight: bold;
}

.item>.middle>.goods-list,
.item>.middle>.goods-list>.goods {
  width: 100%;
}

.item>.middle>.goods-list>.goods {
  padding: 10rpx 0;
  border-bottom: 3rpx solid rgba(187, 187, 187, 1);
}

.item>.middle>.goods-list>.goods>.left {
  width: 120rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.item>.middle>.goods-list>.goods>.center {
  width: calc(100% - 120rpx);
}

.item>.middle>.goods-list>.goods>.center>.name {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
}

.item>.middle>.goods-list>.goods>.center>.tag-group,
.item>.middle>.goods-list>.goods>.center>.identifying-code {
  width: 100%;
}

.item>.middle>.goods-list>.goods>.center>.tag-group>.tag,
.item>.middle>.goods-list>.goods>.center>.identifying-code {
  font-size: 24rpx;
  font-weight: 400;
}

.item>.middle>.goods-list>.goods>.center>.tag-group>.tag {
  margin-left: 30rpx;
}

.item>.middle>.goods-list>.goods>.center>.tag-group>.tag:first-child {
  margin-left: unset;
}

.item>.bottom>.datetime {
  font-size: 24rpx;
  font-weight: 400;
}

.item>.bottom>.profit>.label {
  font-size: 24rpx;
  font-weight: 400;
}

.item>.bottom>.profit>.value {
  font-size: 36rpx;
  font-weight: bold;
}

.page.check-accept-goods>.foot>.btn {
  width: 548rpx;
  height: 80rpx;
}