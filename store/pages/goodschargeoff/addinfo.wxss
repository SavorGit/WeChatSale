/* store/pages/goodschargeoff/addinfo.wxss */
@import "/store/pages/template/commons.wxss";
@import "/window.wxss";

/**
 * 核销 新增核销申请
 */
.panel.makings>.title-bar>.title {
    font-size: 28rpx;
}

.panel.makings>.body>.evidence {
    width: 33.33333333333333333333%;
}

.panel.makings>.body>.evidence>.btn {
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;
}

.panel.makings>.body>.evidence>.btn.add {
    width: 214rpx;
    height: 214rpx;
    font-size: 48rpx;
    color: rgb(187, 187, 187);
    border: 3rpx dashed rgb(187, 187, 187);
}

.panel.makings>.body>.evidence>.tips {
    width: 100%;
}

.panel.makings>.body>.evidence>.tips>.tip {
    font-size: 24rpx;
    font-weight: 400;
}

.panel.makings>.body>.goods {
    width: 240rpx;
    height: 200rpx;
}

.panel.makings>.body>.goods>.pic {
    width: 240rpx;
    height: 160rpx;
}

.panel.makings>.body>.goods>.name {
    width: 100%;
    font-size: 24rpx;
}

.panel.makings>.body>.tip-group {
    width: calc(100% - 245rpx);
    height: 200rpx;
}

.panel.makings>.body>.tip-group>.tip {
    width: 100%;
    line-height: 30rpx;
    font-size: 28rpx;
}

.page>.main>.type {
    width: calc(100% - 60rpx);
    padding: 20rpx 10rpx;
    margin: 20rpx;
    border-top: 3rpx dashed rgba(187, 187, 187, 1);
    border-bottom: 3rpx dashed rgba(187, 187, 187, 1);
}

.page>.main>.type>.label {
    width: 150rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.page>.main>.type>.value {
    width: calc(100% - 150rpx);
    font-size: 32rpx;
}

.page>.foot>.btn {
    width: 548rpx;
    height: 80rpx;
}

.window.write-off {
    width: 690rpx;
    height: 900rpx;
    border-radius: 10rpx;
}

.window.write-off>.win-body {
    height: calc(100% - 90rpx);
}

.window.write-off>.win-body .body-warper>.illustration {
    padding: 20rpx 0;
}

.window.write-off>.win-body .body-warper>.illustration>.pic {
    width: 490rpx;
    height: 490rpx;
}

.window.write-off>.win-body .body-warper>.tip-group {
    padding: 30rpx 0 0;
}

.window.write-off>.win-body .body-warper>.tip-group>.tip {
    padding: 10rpx 0;
}