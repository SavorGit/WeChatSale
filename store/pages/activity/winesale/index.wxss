/* store/pages/activity/winesale/index.wxss */
@import "/store/pages/template/commons.wxss";

/**
 * 售酒抽奖
 */
.panel.tips {
  padding: 50rpx 0;
}

.panel.tips>.body>.tip {
  font-size: 40rpx;
}

.panel.choose-box>.body>.box {
  width: 482rpx;
  height: 60rpx;
  border: 3rpx solid #BEBEBE;
  border-radius: 10rpx;
}

.panel.choose-box>.body>.box .show-content {
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  padding: 5rpx;
}

.panel.choose-box>.body>.box .show-content>.choosed-box {
  width: calc(100% - 40rpx);
  font-size: 28rpx;
}

.panel.button>.body>.btn {
  margin: 0;
  padding: 0;
  border: 0;
}

.panel.button>.body>.btn.launch {
  width: 548rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.window.luck-draw>.mask>.entity>.title-bar>.title {
  font-size: 28rpx;
}

.window.luck-draw>.mask>.entity>.win-body {
  padding: 30rpx 25rpx;
}

.window.luck-draw>.mask>.entity>.win-body>.qr {
  width: 100%;
}

.window.luck-draw>.mask>.entity>.win-body>.qr>.pic {
  width: 276rpx;
  height: 276rpx;
}

.window.luck-draw>.mask>.entity>.win-body>.qr>.label {
  padding: 10rpx 0;
  font-size: 28rpx;
}

.window.luck-draw>.mask>.entity>.win-body>.tip-group {
  width: 100%;
  padding-top: 50rpx;
}

.window.luck-draw>.mask>.entity>.win-body>.tip-group>.tip {
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
}