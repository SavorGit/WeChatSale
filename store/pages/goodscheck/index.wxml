<!--store/pages/goodscheck/index.wxml-->
<import src="/store/pages/template/commons" />
<wxs src="/app.wxs" module="app" />

<!--
  -- 商品验收 首页
  -->
<view wx:if="{{config_info.step==1}}" class="page check-accept-goods container theme-main">
  <scroll-view class="main" scroll-y="true" scroll-with-animation="true">
    <view class="warper flex_column_center_flexStart">
      <template is="goodsPanel" data='{{list:goodsList}}' />

      <view class="panel scan flex_column_center_flexStart">
        <view class="title-bar flex_row_center_flexStart">
          <view class="title">请扫描商品唯一标识验收</view>
        </view>
        <view class="body flex_column_center_center" bindtap="scanGoodsCode">
          <view class="btn flex_column_center_center theme-button-blue">
            <view class="icon fa fa-qrcode" aria-hidden="true"></view>
            <view class="text">扫码</view>
          </view>
        </view>
      </view>

      <template is="goodsPanelForChecked" data='{{title:title,list:scanList}}' />
    </view>
  </scroll-view>
  <view class="foot flex_row_center_spaceAround" bindtap="changeStep">
    <view class="btn ok flex_row_center_center theme-button-blue" bindtap="completeStore">下一步</view>
  </view>
</view>

<!--
  -- 商品验收 上传验收单
  -->
<view wx:else class="page check-accept-goods container theme-main">
  <scroll-view class="main" scroll-y="true" scroll-with-animation="true">
    <view class="warper flex_column_center_flexStart">
      <template is="goodsPanel" data='{{list:goodsList}}' />

      <view class="panel scan flex_column_center_flexStart">
        <view class="title-bar flex_row_center_flexStart">
          <view class="title">已扫商品码({{all_nums}})</view>
        </view>
        <view class="body flex_column_center_center" bindtap="uploadCheckBillPic">
          <image wx:if="{{img_path !=''}}" class="pic" mode="widthFix" src="{{oss_url}}{{img_path}}" />
          <view wx:else class="btn flex_column_center_center theme-button-blue" >
            <view class="icon fa fa-plus" aria-hidden="true"></view>
          </view>
          <view class="tip">请上传酒楼验收单照片</view>
        </view>
      </view>

    </view>
  </scroll-view>
  <view class="foot flex_row_center_spaceAround" >
    <button class="btn ok flex_row_center_center theme-button-blue" bindtap="subGoodsCheck" disabled="{{addDisabled}}">提交</button>
  </view>
</view>